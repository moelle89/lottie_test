<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ChatFragment">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="596px"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/dashboardhero"
        android:contentDescription="@string/head"
        app:layout_constraintTop_toTopOf="parent" />

    <com.klinker.android.simple_videoview.SimpleVideoView
        android:id="@+id/dashboard_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        app:loop="true"
        app:muted="false"
        app:showSpinner="false"
        android:contentDescription="@string/head"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include2"
        layout="@layout/content_dashboard"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/paypal"
        android:layout_width="204dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_gravity="end"
        android:layout_marginBottom="124dip"
        android:layout_marginStart="25dp"
        android:background="@drawable/ic_paypal"
        android:gravity="right|center"
        android:onClick="launchPaypal"
        app:layout_anchor="@+id/include2"
        app:layout_anchorGravity="left|bottom" />

    <ImageView
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="124dip"
        android:layout_gravity="end"
        android:layout_marginEnd="44dp"
        android:src="@drawable/floating_action_button_icon"
        android:tint="#fff"
        app:layout_anchor="@+id/include2"
        app:layout_anchorGravity="right|bottom" />


</androidx.constraintlayout.widget.ConstraintLayout>
