<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xmlstools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/dialog"
    android:layout_height="match_parent"
    xmlstools:showIn="@layout/fragment_1"
    android:background="@color/dialog">

    <ImageView
        android:id="@+id/closeDialogImg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="30dp"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="@color/secondary_text_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/closeBG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:src="@drawable/ic_1"
        android:alpha="0.0"
        android:tint="@color/background"/>


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/animation_viewNull"
        app:lottie_colorFilter="@color/colorAccentPromptBackground"
        app:lottie_rawRes="@raw/slidenull"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:lottie_renderMode="hardware"/>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/tg"
            android:alpha="0.0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/cardCornerRadius_small"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/gradient_bg_tg"
                android:gravity="top|end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTg"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-35dp"
                    android:alpha="0.08"
                    android:src="@drawable/tg"
                    android:tint="#D9000000"
                    android:transitionName="feature_img1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/launch_telegramgroup"
                        android:textAlignment="textStart"
                        android:textColor="#D9FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mail"
            android:alpha="0.0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/cardCornerRadius_small"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/gradient_bg_mail"
                android:gravity="top|end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgMail"
                    android:transitionName="feature_img1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="-35dp"
                    android:alpha="0.08"
                    android:src="@drawable/ic_1"
                    android:tint="#D9000000"
                    android:layout_gravity="top|end" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/launch_email"
                        android:textAlignment="textStart"
                        android:textColor="#D9FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/iconTG"
        android:alpha="0.0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/tg"
        android:tint="#4197FF"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2" />

    <ImageView
        android:id="@+id/iconMAIL"
        android:alpha="0.0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/ic_1"
        android:tint="#FA345B"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toEndOf="@+id/iconTG" />
</androidx.constraintlayout.widget.ConstraintLayout>