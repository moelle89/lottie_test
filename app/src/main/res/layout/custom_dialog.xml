<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_material"
    android:foreground="@drawable/dialog_foreground_material"
    android:padding="8dp"
    tools:context=".SubstratumLauncher">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="@string/launch_dialog_title"
        android:textColor="#00000000"
        android:textSize="22sp"/>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="400dp"
        android:layout_height="312dip"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:gravity="center"
            android:paddingStart="0dp"
            android:text="@string/launch_dialog_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:lottie_fileName="data.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:paddingBottom="10dp"
            android:paddingEnd="2dp"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textExit"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="30dp"
            android:background="#00000000"
            android:contentDescription="@string/launch_dialog_title"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"/>

        <CheckBox
            android:id="@+id/textExit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="25dp"
            android:background="#00000000"
            android:button="@drawable/btn_check_off"
            android:paddingStart="6dp"
            android:paddingEnd="18dp"
            android:text="@string/exit"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:theme="@android:style/Widget.CompoundButton.CheckBox"
            android:textSize="18sp"/>


        <Button
            android:id="@+id/textContinue"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:layout_toRightOf="@+id/textExit"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/animation_view"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="22dp"
            android:background="#00000000"
            android:gravity="start"
            android:text="@string/proceed"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:textStyle="bold" />



        <ImageButton
            android:id="@+id/ic_continue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textContinue"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="34dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_continue"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:textSize="9sp"
            android:textColor="@color/buttonFocused"
            android:text="@string/app_version" />

    </RelativeLayout>


</RelativeLayout>