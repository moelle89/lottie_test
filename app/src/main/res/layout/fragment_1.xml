<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.fragment_1"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="?backgroundcolor"
        android:foreground="@drawable/gradient_cover"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?backgroundcolor"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:id="@+id/dashboard_head"
                app:lottie_colorFilter="?backgroundcolor"
                app:layout_collapseMode="parallax"
                app:lottie_rawRes="@raw/dashboard_head"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:behavior_overlapTop="120dp"
        app:layout_anchor="@id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flmiddle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:paddingRight="16dp">

                        <ImageView
                            android:id="@+id/animation_view2"
                            android:layout_margin="@dimen/spacing_middle"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_launcher_foreground" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/cat_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sequel_sans_heavy"
                    android:text="DEEP\nDARKNESS //"
                    android:textColor="@color/textColor"
                    android:textSize="18sp" />
                <TextView
                    android:layout_marginStart="25dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sequel_sans_heavy"
                    android:text="welcome to\nthe dark side."
                    android:textColor="@color/secondary_text_light"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/anchor_cardleft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLeft"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?cardbackground"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="?cardelevation_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_large">

                            <ImageView
                                android:id="@+id/img1"
                                android:transitionName="feature_img1"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="14dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_1"
                                android:layout_gravity="start|top" />

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="2dp"
                            android:text="CONTACT ME"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="?textcolorsecondary"
                            android:transitionName="feature_text1" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?cardbackground"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="?cardelevation_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_large">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="14dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_2"
                                android:layout_gravity="start|top" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="2dp"
                                android:text="MAKE A DONATION"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="?textcolorsecondary" />

                        </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLeft2"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?cardbackground"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="?cardelevation_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_large">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/img3"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="14dp"
                                app:lottie_colorFilter="?textcolor"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/restart"
                                android:layout_gravity="start|top"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="2dp"
                                android:text="RESTART INTRO"
                                android:textAlignment="textStart"
                                android:fontFamily="@font/cocogoose_regular"
                                app:fontFamily="@font/cocogoose_regular"
                                android:textColor="?textcolorsecondary" />

                        </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRight2"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?cardbackground"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="?cardelevation_small">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_large">

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="start|top"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="14dp"
                                android:src="@drawable/ic_4" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="2dp"
                                android:text="WALLPAPERS"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="?textcolorsecondary" />

                        </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/cat_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="34dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sequel_sans_medium"
                    android:text="Supported Android Systems:"
                    android:textColor="?attr/textcolorsecondary"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?cardbackground"
                    app:cardCornerRadius="@dimen/cardCornerRadius_small"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="113dip"
                            android:background="@drawable/gradient_bg1"
                            android:gravity="bottom|start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="95dp"
                                android:gravity="bottom|start"
                                android:padding="@dimen/spacing_small">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginBottom="2dp"
                                    android:text="AOSP"
                                    android:textAlignment="textStart"
                                    android:textColor="#B3ffffff"
                                    android:textSize="21sp" />
                            </LinearLayout>
                        </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?cardbackground"
                    app:cardCornerRadius="@dimen/cardCornerRadius_small"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="113dip"
                            android:background="@drawable/gradient_bg2"
                            android:gravity="bottom|start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="95dp"
                                android:gravity="bottom|start"
                                android:padding="@dimen/spacing_small">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginBottom="2dp"
                                    android:text="OXYGEN OS"
                                    android:textAlignment="textStart"
                                    android:textColor="#B3ffffff"
                                    android:textSize="22sp" />
                            </LinearLayout>
                        </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?cardbackground"
                    app:cardCornerRadius="@dimen/cardCornerRadius_small"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="113dip"
                            android:background="@drawable/gradient_bg3"
                            android:gravity="bottom|start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="95dp"
                                android:gravity="bottom|start"
                                android:padding="@dimen/spacing_small">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginBottom="2dp"
                                    android:text="SAMSUNG"
                                    android:textAlignment="textStart"
                                    android:textColor="#B3ffffff"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>