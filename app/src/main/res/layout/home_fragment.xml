<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".FirstActivity">

<ImageView
    android:id="@+id/image_view"
    android:layout_width="match_parent"
    android:layout_height="596px"
    android:layout_gravity="top"
    android:layout_marginTop="0dp"
    android:fitsSystemWindows="true"
    android:scaleType="centerCrop"
    android:src="@drawable/dashboardhero"
    android:contentDescription="@string/head" />

<com.klinker.android.simple_videoview.SimpleVideoView
    android:id="@+id/dashboard_head"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginTop="0dp"
    android:fitsSystemWindows="true"
    android:scaleType="centerCrop"
    app:loop="true"
    app:muted="false"
    app:showSpinner="false"
    android:contentDescription="@string/head" />

<include
    android:id="@+id/include2"
    layout="@layout/content_dashboard" />

<ImageView
    android:id="@+id/paypal"
    android:layout_width="204dp"
    android:layout_height="85dp"
    android:layout_alignParentEnd="false"
    android:layout_alignParentTop="false"
    android:layout_gravity="end"
    android:layout_marginBottom="124dip"
    android:layout_marginStart="25dp"
    android:background="@drawable/ic_paypal"
    android:gravity="right|center"
    android:onClick="launchPaypal"
    app:layout_anchor="@+id/include2"
    app:layout_anchorGravity="left|bottom" />

<ImageView
    android:id="@+id/fab"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_alignParentEnd="false"
    android:layout_alignParentTop="false"
    android:layout_marginBottom="124dip"
    android:layout_gravity="end"
    android:layout_marginEnd="44dp"
    android:src="@drawable/floating_action_button_icon"
    android:tint="#fff"
    app:layout_anchor="@+id/include2"
    app:layout_anchorGravity="right|bottom" />

<CheckBox
    android:id="@+id/hide"
    android:layout_width="200dp"
    android:layout_height="0dp"
    android:layout_alignParentTop="false"
    android:layout_alignParentEnd="false"
    android:layout_gravity="end"
    android:layout_marginLeft="38dp"
    android:layout_marginBottom="82dip"
    android:button="@drawable/btn_check_off"
    android:checked="false"
    android:gravity="center_vertical"
    android:onClick="hide"
    android:text="@string/launch_hide"
    android:textAppearance="@style/TextAppearance.AppCompat.Small"
    android:textColor="@color/textColor"
    android:theme="@android:style/Widget.CompoundButton.CheckBox"
    app:layout_anchor="@+id/include2"
    app:layout_anchorGravity="left|bottom" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstActivity">

        <com.iammert.library.readablebottombar.ReadableBottomBar
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            app:rbb_tabs="@xml/tabs"
            android:foreground="@drawable/bottombar_bar_background"
            app:rbb_backgroundColor="@color/background"
            app:rbb_textColor="@android:color/white"
            app:rbb_activeItemType="text"
            android:layout_marginTop="64dp"
            app:rbb_textSize="8sp"
            android:textStyle="bold"
            app:rbb_indicatorColor="@color/colorAccent"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>