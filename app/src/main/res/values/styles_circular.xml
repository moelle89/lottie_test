<resources>
    <!-- Base application theme. -->
    <style name="Circular" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="colorAccent">@color/orange_background</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.Material.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Circular.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>
    <style name="Circular.Fab">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/gradientbottom</item>
    </style>

    <style name="Circular.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Circular.PopupOverlay" parent="ThemeOverlay.AppCompat" />

</resources>
