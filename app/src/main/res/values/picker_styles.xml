<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="ThemeOverlay.Dialog" parent="@*android:style/Theme.Material.Dialog.BaseAlert">
    <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
    <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
    <item name="android:buttonStyle">@style/Button</item>
    <item name="android:borderlessButtonStyle">@style/Button</item>
    <item name="android:buttonBarStyle">@style/Button</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
    <item name="android:colorBackground">@color/background</item>
    <item name="android:windowBackground">@drawable/dialog_background_material</item>
    <item name="android:windowSoftInputMode">adjustPan</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:backgroundDimAmount">@dimen/backgroundDimAmount</item>
    <item name="android:windowElevation">@dimen/cardelevation_big</item>
  </style>
  <style name="Button">
    <item name="android:textColor">@color/btn_colored_text</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@null</item>
    <item name="android:windowBackground">@null</item>
    <item name="android:foreground">@color/transparent</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="android:focusable">false</item>
    <item name="android:clickable">true</item>
    <item name="android:minWidth">88.0dip</item>
    <item name="android:minHeight">48.0dip</item>
  </style>
  <style name="DialogWindowTitle" parent="@*android:style/DialogWindowTitle.Material">
    <item name="android:textColor">@color/textColor</item>
    <item name="android:maxLines">1</item>
    <item name="android:autoSizeTextType">uniform</item>
    <item name="android:autoSizeMaxTextSize">26sp</item>
    <item name="android:autoSizeMinTextSize">20sp</item>
    <item name="android:minHeight">34.0dip</item>
  </style>
  <style name="cpv_ColorPickerViewStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">300dp</item>
  </style>
  <style name="Animation.Dialog" parent="@style/Animation">
    <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
    <item name="android:windowExitAnimation">@anim/dialog_exit</item>
  </style>
</resources>
