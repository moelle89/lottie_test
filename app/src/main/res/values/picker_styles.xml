<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="LightPickerDialogTheme" parent="DialogStyle">
    <item name="android:colorAccent">#FC0000</item>
    <item name="android:background">#ff000000</item>
    <item name="android:backgroundTint">@color/colorAccent</item>
    <item name="android:windowTitleStyle">@style/LightPickerDialogTitleStyle</item>
  </style>

  <style name="DarkPickerDialogTheme" parent="android:Theme.Material.Dialog">
    <item name="android:colorAccent">#FF0000</item>
    <item name="android:background">#ff000000</item>
    <item name="android:backgroundTint">@color/colorAccent</item>
    <item name="android:windowTitleStyle">@style/DarkPickerDialogTitleStyle</item>
  </style>

  <style name="LightPickerDialogTitleStyle">
    <item name="android:maxLines">1</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Material.DialogWindowTitle</item>
    <item name="android:textColor">#FF0000</item>
  </style>

  <style name="DarkPickerDialogTitleStyle">
    <item name="android:maxLines">1</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Material.DialogWindowTitle</item>
    <item name="android:textColor">#FF0000</item>
  </style>

  <style name="ThemeOverlay.Material.Dialog" parent="@android:style/ThemeOverlay.Material">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:colorBackground">?android:colorBackgroundFloating</item>
    <item name="android:windowBackground">@drawable/dialog_background_material</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:listDivider">@null</item>
    <item name="android:divider">@null</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:backgroundDimAmount">0.3</item>
    <item name="android:windowSoftInputMode">adjustPan</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowActionModeOverlay">true</item>
    <item name="android:windowElevation">2.0dip</item>
    <item name="android:elevation">2.0dip</item>
    <item name="*android:windowFixedWidthMajor">@null</item>
    <item name="*android:windowFixedHeightMinor">@null</item>
    <item name="*android:windowFixedWidthMinor">@null</item>
    <item name="*android:windowFixedHeightMajor">@null</item>
  </style>

</resources>
