<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Splash" parent="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        <item name="android:windowAnimationStyle">@style/Animation</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="ApptThemeDialogContact" parent="AppTheme">
        <item name="android:colorControlHighlight">@color/selectableItemBackgroundBorderless</item>
        <item name="android:colorControlActivated">@color/selectableItemBackgroundBorderless</item>
       <item name="android:statusBarColor">@color/dialog_contact</item>
       <item name="android:navigationBarColor">@color/dialog_contact</item>
    </style>
    <style name="ApptThemeDialogDonation" parent="AppTheme">
        <item name="android:colorControlHighlight">@color/selectableItemBackgroundBorderless</item>
        <item name="android:colorControlActivated">@color/selectableItemBackgroundBorderless</item>
        <item name="android:statusBarColor">@color/donation_sb</item>
        <item name="android:navigationBarColor">@color/donation_nav</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="ApptThemeDialogAOSP" parent="AppTheme">
        <item name="android:colorControlHighlight">@color/selectableItemBackgroundBorderless</item>
        <item name="android:colorControlActivated">@color/selectableItemBackgroundBorderless</item>
        <item name="android:statusBarColor">@color/donation_sb</item>
        <item name="android:navigationBarColor">@color/donation_nav</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="ApptThemeDialogOOS" parent="AppTheme">
        <item name="android:colorControlHighlight">@color/selectableItemBackgroundBorderless</item>
        <item name="android:colorControlActivated">@color/selectableItemBackgroundBorderless</item>
        <item name="android:statusBarColor">@color/oos_sb</item>
        <item name="android:navigationBarColor">@color/oos_nav</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="ApptThemeDialogSAMSUNG" parent="AppTheme">
        <item name="android:colorControlHighlight">@color/selectableItemBackgroundBorderless</item>
        <item name="android:colorControlActivated">@color/selectableItemBackgroundBorderless</item>
        <item name="android:statusBarColor">@color/donation_sb</item>
        <item name="android:navigationBarColor">@color/donation_nav</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    <style name="ApptThemeWall" parent="AppTheme">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="alertDialogTheme">@style/ThemeOverlay.Dialog</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/TextAppearance.Khula</item>
        <item name="android:windowLightStatusBar">@bool/windowLightStatusBar</item>
        <item name="android:windowLightNavigationBar">@bool/windowLightNavigationBar</item>
        <item name="android:colorControlNormal">@color/textColor</item>
        <item name="android:colorControlActivated">@color/selectableItemBackgroundBorderless</item>
        <item name="android:colorControlHighlight">@color/selectableItemBackgroundBorderless</item>
        <item name="android:windowAnimationStyle">@style/Animation</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorBackgroundFloating">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/background</item>
        <item name="cardbackground">@color/cardbackgroundlight</item>
        <item name="textcolor">@color/textColor</item>
        <item name="textcolorsecondary">@color/secondary_text_light</item>
        <item name="tintcolor">@color/colorAccent_light</item>
        <item name="buttoncolor">@color/appintro_icon_tint</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="cardelevation">@dimen/cardelevation</item>
        <item name="cardelevation_small">@dimen/cardelevation_small</item>
        <item name="cardelevation_tiny">@dimen/cardelevation_tiny</item>
    </style>

    <!-- Base application theme. -->
    <style name="ButtonNull">
        <item name="android:background">@color/background</item>
        <item name="android:backgroundTint">@android:color/black</item>
    </style>
    <style name="TextAppearance.Khula" parent="android:TextAppearance">
        <item name="fontPath">fonts/Khula-Bold.ttf</item>
        <item name="android:lineSpacingMultiplier">0.6</item>
    </style>
    <style name="TextAppearance.KhulaBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Khula-ExtraBold.ttf</item>
        <item name="android:lineSpacingMultiplier">0.6</item>
    </style>
    <style name="TextAppearance.KhulaSemiBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Khula-Bold.ttf</item>
        <item name="android:lineSpacingMultiplier">0.6</item>
    </style>
    <style name="TextAppearance.Cocogoose" parent="android:TextAppearance">
        <item name="fontPath">fonts/cocogoose_regular.ttf</item>
    </style>
    <style name="mySwitchStyle" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_material_anim</item>
        <item name="track">@drawable/switch_track_material</item>
        <item name="trackTint">@color/track_selector</item>
        <item name="showText">false</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="switchPadding">0dp</item>
    </style>
</resources>