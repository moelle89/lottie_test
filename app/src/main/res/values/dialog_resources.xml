<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Making a dark theme? You know what to do! -->
    <style name="DialogStyle" parent="@style/Theme.AppCompat.NoActionBar" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="Fullscreendialog" parent="@style/Theme.AppCompat.NoActionBar" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--
      ~ Custom dialog message on theme launch.
      ~ Add word in launch_dialog_negative to add a cancel button on the dialog
      -->
    <string name="launch_dialog_negative">Nah</string>
    <string name="launch_dialog_negative_url" />
    <string name="link_playstore">https://play.google.com/store/apps/details?id=com.pierx.prime.novus</string>
    <string name="link_support">https://t.me/themes_pier</string>
    <string name="link_changelog">https://raw.githubusercontent.com/pierx/links/master/prime.txt</string>
    <string name="launch_dialog_neutral">Rate</string>
</resources>