<?xml version="1.0" encoding="utf-8"?>
<inset android:inset="16.0dip" xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list>
        <item android:top="-12dp">
            <shape android:tint="@color/cardbackgroundlight">
                <gradient
                    android:angle="90.0"
                    android:endColor="#E6000000"
                    android:startColor="#000000"
                    android:type="linear" />
                <corners android:radius="20dp" />
                <stroke
                    android:width="3.0dp"
                    android:color="@color/cardbackgroundlight" />
            </shape>
        </item>
        <item android:top="-12dp">
            <shape>
                <solid android:color="#00000000" />
                <corners android:radius="20dp" />
                <stroke android:width="3.0dp" android:color="@color/pickerStroke" />
            </shape>
        </item>
    </layer-list>
</inset>