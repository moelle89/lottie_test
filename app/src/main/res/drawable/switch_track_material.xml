<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_mediumAnimTime"
    android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:state_checked="true">
        <shape android:shape="rectangle" android:useLevel="false" android:visible="true">
			<solid android:color="@color/overlay_accent_60" />
            <corners android:radius="25.0dip" />
            <size android:width="24.0dip" android:height="24.0dip" />
            <stroke android:width="1.2dp" android:color="@color/colorAccent" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:visible="true" >
			<solid android:color="#C4C4C4" />
            <corners android:radius="25.0dip" />
            <size android:width="24.0dip" android:height="24.0dip" />
        </shape>
    </item>
</selector>