<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
                <shape android:shape="rectangle">
                        <stroke android:width="2dp" android:color="#26000000" />
                        <corners android:radius="200dp" />
                </shape></item>
        <item android:right="7dp" android:left="7dp" android:top="7dp" android:bottom="7dp">
                <shape android:shape="rectangle">
                        <gradient
                            android:startColor="#05000000"
                            android:endColor="#1F000000"
                            android:angle="90" />
                        <corners android:radius="200dp" />
                </shape></item>
        <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                        <solid android:color="@color/transparent" />
                        <corners android:radius="200dp" />
                        <stroke android:width="5dp" android:color="#1FFFFFFF" />
                </shape></item>

</layer-list>