<?xml version="1.0" encoding="utf-8"?>
<!-- This version zooms the new non-wallpaper up out of the
     wallpaper, without zooming the wallpaper itself. -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/decelerate_interpolator"
    android:detachWallpaper="true">
    <scale android:fromXScale="0.75" android:toXScale="1"
        android:fromYScale="0.75" android:toYScale="1"
        android:pivotX="50%p" android:pivotY="50%p"
        android:duration="600" />
    <alpha android:duration="600" android:fromAlpha="0" android:toAlpha="1" />
</set>