<?xml version="1.0" encoding="utf-8"?>
<!-- This version zooms the new non-wallpaper up out of the
     wallpaper, without zooming the wallpaper itself. -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:detachWallpaper="true">
    <scale android:fromXScale="1.0" android:toXScale="1.25"
           android:fromYScale="1.0" android:toYScale="1.25"
           android:pivotX="50%p" android:pivotY="50%p"
           android:duration="@android:integer/config_longAnimTime" />
	<alpha android:duration="@android:integer/config_longAnimTime" android:fromAlpha="1" android:toAlpha="0.0" />
</set>