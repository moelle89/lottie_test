<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RtlOverlay.Widget.AppCompat.ActionBar.TitleItem" parent="@android:style/Widget">
        <item name="android:layout_gravity">center|left</item>
        <item name="android:paddingRight">8.0dip</item>        
		<item name="android:textColor">@*android:color/white</item>
    </style>
		<style name="Theme.VideoActionButtonCloseModeStyle" parent="@android:style/Widget.DeviceDefault.ActionButton.CloseMode">
			<item name="android:visibility">gone</item>
		</style>		
		<style name="Base.Widget.AppCompat.PopupMenu" parent="@android:style/Widget.DeviceDefault.Light.PopupMenu">
			<item name="android:popupBackground">@*com.samsung.android.videolist:drawable/abc_dialog_material_background</item>
			<item name="android:windowBackground">@*com.samsung.android.videolist:drawable/abc_dialog_material_background</item>
			<item name="android:dropDownHorizontalOffset">0.0dip</item>
			<item name="android:dropDownVerticalOffset">8.0dip</item>
			<item name="android:popupAnimationStyle">@*android:style/Animation.DeviceDefault.MenuPopup</item>
			<item name="android:overlapAnchor">true</item>
			<item name="android:popupElevation">2.0dip</item>
			<item name="android:popupEnterTransition">@empty</item>
			<item name="android:popupExitTransition">@empty</item>
		</style>
		<style name="Theme.VideoActionModeStyle" parent="@android:style/Widget.DeviceDefault.ActionMode">
			<item name="android:background">@*android:color/background_dark</item>
		</style>
	    <style name="DialogTheme.MinWidth" parent="@android:style/Theme.DeviceDefault.Dialog.Alert">
		    <item name="android:windowTitleStyle">@*android:style/DialogWindowTitle.DeviceDefault</item>
			<item name="android:checkboxStyle">@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox</item>
			<item name="android:radioButtonStyle">@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton</item>
			<item name="android:windowBackground">@*com.samsung.android.videolist:drawable/abc_dialog_material_background</item>
			<item name="android:colorBackground">@*android:color/dim_foreground_light</item>
			<item name="android:colorBackgroundFloating">@*android:color/dim_foreground_light</item>
			<item name="android:titleTextColor">@*android:color/white</item>
			<item name="android:colorEdgeEffect">#3Dffffff</item>			
			<item name="android:textColorPrimary">#ffffffff</item>			
			<item name="android:textColorSecondary">#ffffffff</item>			
			<item name="android:textColorHighlight">#ffffffff</item>			
			<item name="android:textColorHint">#ffffffff</item>			
			<item name="android:textColorLink">#ffffffff</item>			
			<item name="android:textColor">#ffffffff</item>
			<item name="android:windowSoftInputMode">adjustResize</item>
			<item name="android:actionBarStyle">@android:style/Widget.Material.ActionBar.Solid</item>
			<item name="android:colorControlHighlight">@*com.samsung.android.videolist:color/color_primary</item>
			<item name="android:colorAccent">@*com.samsung.android.videolist:color/color_primary</item>
			<item name="android:colorControlActivated">@*com.samsung.android.videolist:color/color_primary</item>
    </style>
		<style name="DialogActivity" parent="@android:style/Theme.DeviceDefault">
			<item name="android:windowFullscreen">true</item>
			<item name="android:actionBarStyle">@android:style/Widget.Material.ActionBar.Solid</item>
			<item name="android:actionBarTheme">@*android:style/ThemeOverlay.Material.ActionBar</item>
			<item name="android:homeAsUpIndicator">@*com.samsung.android.videolist:drawable/tw_ic_ab_back_mtrl</item>
			<item name="android:actionModeStyle">@*com.samsung.android.videolist:style/Theme.VideoActionModeStyle</item>
			<item name="android:alertDialogTheme">@*com.samsung.android.videolist:style/DialogTheme.MinWidth</item>
			<item name="android:actionMenuTextColor">@*android:color/white</item>
			<item name="android:windowBackground">@*android:color/background_dark</item>
			<item name="android:colorPrimary">@*android:color/background_dark</item>
			<item name="android:colorPrimaryDark">@*com.samsung.android.videolist:color/color_primary</item>
			<item name="android:statusBarColor">@*android:color/background_dark</item>
			<item name="android:windowLightStatusBar">false</item>
			<item name="android:navigationBarColor">@*android:color/background_dark</item>
			<item name="android:titleTextColor">@*android:color/white</item>
		</style>
		
    <style name="Theme.VideoApplication" parent="@android:style/Theme.DeviceDefault">
		<item name="android:statusBarColor">@*android:color/background_dark</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>				
		<item name="android:colorBackground">@*android:color/dim_foreground_light</item>	
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:alertDialogTheme">@*com.samsung.android.videolist:style/DialogTheme.MinWidth</item>
    </style>
	
    <style name="Theme.VideoMainActivity" parent="@*com.samsung.android.videolist:style/Theme.VideoBaseTheme">
		<item name="android:scrollbarTrackHorizontal">@null</item>
        <item name="android:scrollbarTrackVertical">@null</item>
        <item name="android:actionBarStyle">@android:style/Widget.Material.ActionBar.Solid</item>
		<item name="android:statusBarColor">@*android:color/background_dark</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>			
		<item name="android:windowBackground">@*android:color/background_dark</item>			
		<item name="android:colorBackground">@*android:color/dim_foreground_light</item>	
    </style>	
    <style name="Theme.VideoBaseTheme" parent="@android:style/Theme.DeviceDefault">
		<item name="android:scrollbarTrackHorizontal">@null</item>
        <item name="android:scrollbarTrackVertical">@null</item>
		<item name="android:horizontalScrollViewStyle">@*android:style/Widget.Material.HorizontalScrollView</item>
	    <item name="android:fastScrollStyle">@*android:style/Widget.Material.FastScroll</item>
	    <item name="android:scrollViewStyle">@*android:style/Widget.Material.ScrollView</item>
		<item name="android:textColorAlertDialogListItem">#ffffffff</item>
		<item name="android:dialogTheme">@*com.samsung.android.videolist:style/DialogTheme.MinWidth</item>
		<item name="android:alertDialogTheme">@*com.samsung.android.videolist:style/DialogTheme.MinWidth</item>
		<item name="android:titleTextColor">@*android:color/white</item>
		<item name="android:colorEdgeEffect">#3Dffffff</item>			
		<item name="android:textColorPrimary">#ffffffff</item>			
		<item name="android:textColorSecondary">#ffffffff</item>			
		<item name="android:textColorHighlight">#ffffffff</item>			
		<item name="android:textColorHint">#ffffffff</item>			
		<item name="android:textColorLink">#ffffffff</item>			
		<item name="android:textColor">#ffffffff</item>
		<item name="android:colorBackgroundFloating">@*android:color/dim_foreground_light</item>
		<item name="android:colorControlHighlight">@*com.samsung.android.videolist:color/color_primary</item>
		<item name="android:homeAsUpIndicator">@*com.samsung.android.videolist:drawable/tw_ic_ab_back_mtrl</item>
		<item name="android:actionButtonStyle">@*android:style/Widget.Material.ActionButton</item>
		<item name="android:actionBarTabStyle">@*android:style/Widget.Material.ActionBar.TabView</item>
		<item name="android:actionBarTabBarStyle">@*android:style/Widget.Material.ActionBar.TabBar</item>
		<item name="android:actionBarTabTextStyle">@*android:style/Widget.Material.ActionBar.TabText</item>
		<item name="*android:popupMenuStyle">@*com.samsung.android.videolist:style/Base.Widget.AppCompat.PopupMenu</item>
		<item name="android:windowFullscreen">true</item>
		<item name="*android:parentIsDeviceDefault">true</item>
		<item name="*android:parentIsDeviceDefaultDark">false</item>
		<item name="android:actionModeCloseButtonStyle">@*com.samsung.android.videolist:style/Theme.VideoActionButtonCloseModeStyle</item>
		<item name="android:actionMenuTextColor">@*android:color/white</item>
		<item name="android:actionModeStyle">@*com.samsung.android.videolist:style/Theme.VideoActionModeStyle</item>
		<item name="android:actionBarStyle">@android:style/Widget.Material.ActionBar.Solid</item>
		<item name="android:colorControlActivated">@*com.samsung.android.videolist:color/color_primary</item>
		<item name="android:colorPrimary">@*android:color/background_dark</item>	
		<item name="android:colorPrimaryDark">@*com.samsung.android.videolist:color/color_primary</item>			
		<item name="android:checkMarkTint">@*com.samsung.android.videolist:color/color_primary</item>			
		<item name="android:tickMarkTint">@*com.samsung.android.videolist:color/color_primary</item>
		<item name="android:statusBarColor">@*android:color/background_dark</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>			
		<item name="android:windowBackground">@*android:color/background_dark</item>			
		<item name="android:colorBackground">@*android:color/dim_foreground_light</item>
	</style>
</resources>
