<?xml version="1.0" encoding="utf-8"?><!-- volume dialog top area -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" android:tint="@*android:color/timepicker_default_background_material">
            <gradient
                android:type="linear"
                android:startColor="#8b000000"
                android:endColor="#40000000"
                android:angle="90" />
            <corners android:radius="20.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2.5dip" android:color="@*android:color/timepicker_default_background_material" />
            <solid android:color="@*android:color/facelock_spotlight_mask" />
            <corners android:radius="20.0dip" />
        </shape>
    </item>
    <item android:top="1.0dip" android:left="1.0dip" android:right="1.0dip" android:bottom="2.0dip">
        <shape android:shape="rectangle" android:tint="@*android:color/holo_orange_light">
            <stroke android:width="1.5dip" android:color="#8dffffff" />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="18.0dip" />
        </shape>
    </item>
    <item android:bottom="8dp" android:top="5dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle" android:tint="@*android:color/shadow">
            <gradient
                android:centerX="50%"
                android:type="linear"
                android:startColor="#c4000000"
                android:centerColor="#47000000"
                android:endColor="#00000000"
                android:angle="90" />
            <corners android:radius="24.0dip" />
        </shape>
    </item>
</layer-list>