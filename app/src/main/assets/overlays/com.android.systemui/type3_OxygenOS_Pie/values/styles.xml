<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SystemUI.Dialog" parent="@android:style/Theme.DeviceDefault.Dialog">
		<item name="android:colorControlHighlight">@*android:color/holo_button_pressed</item>
	</style>
    <style name="Theme.SystemUI.Dialog.Alert" parent="@android:style/Theme.DeviceDefault.Dialog.Alert" >
		<item name="android:colorControlHighlight">@*android:color/holo_button_pressed</item>
	</style>
    <style name="TextAppearance.QS" parent="@*com.android.systemui:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.QS.Subhead" parent="@*com.android.systemui:style/TextAppearance.QS">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@*android:color/white</item>
    </style>
    <style name="TextAppearance.QS.TileLabel" parent="@*com.android.systemui:style/TextAppearance.QS">
        <item name="android:textSize">@*com.android.systemui:dimen/qs_tile_text_size</item>
		<item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textColor">@*android:color/white</item>
    </style>
	<!-- qs panel -> add tiles page -->
    <style name="edit_theme" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:colorBackground">@*android:color/legacy_primary</item>
        <item name="android:colorSecondary">@*android:color/user_icon_7</item><!--QS TILE CUSTOMIZER bg AOSP P -->
		<item name="android:colorPrimary">@*android:color/white</item><!--QS TILE ACTIVE power menu bg AOSP 8.1 -->
		<item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
	
	<style name="qs_theme" parent="@*com.android.systemui:style/qs_base">
		<item name="android:windowIsFloating">true</item>
		<item name="android:dividerHorizontal">@null</item>
        <item name="*com.android.systemui:darkIconTheme">@*com.android.systemui:style/QSIconTheme</item>
        <item name="*com.android.systemui:lightIconTheme">@*com.android.systemui:style/QSIconTheme</item>
        <item name="android:colorPrimary">@*android:color/white</item> <!-- QS TILE ACTIVE power menu bg AOSP 8.1 -->
        <item name="android:colorPrimaryDark">@*android:color/transparent</item> <!-- advanced power menu bg AOSP 8.1 -->
		<item name="android:colorSecondary">@*android:color/legacy_primary</item>		
		<item name="android:textColorTertiary">@*android:color/holo_orange_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="android:colorControlNormal">@*android:color/lighter_gray</item>	<!--signal tile letter, expand icon AOSP 8.1 -->
		<item name="android:colorBackgroundFloating">@*android:color/dim_foreground_light</item>	<!-- QuickSettings, Volume Background -->
    </style>
    <!-- QuickSettings - Power Menu -->
    <style name="qs_base" parent="@*android:style/Theme.DeviceDefault.QuickSettings">
		<item name="android:dividerHorizontal">@null</item>
		<item name="android:colorAccent">@*android:color/accent_material_dark</item>
		<item name="android:colorControlNormal">@*android:color/lighter_gray</item>			
        <item name="android:colorPrimary">#32B3D1E3</item>           <!-- Power Menu - Main -->
        <item name="android:colorPrimaryDark">@*android:color/user_icon_default_white</item>       <!-- Power Menu - Additional (Bug Report) -->
        <item name="android:colorSecondary">@*android:color/legacy_primary</item>         <!-- QuickSettings - Edit Background -->
        <item name="android:colorBackgroundFloating">@*android:color/transparent</item><!-- QuickSettings, Volume Background -->
		<item name="android:panelColorBackground">@*android:color/user_icon_default_white</item>   <!-- P - Volume Panel Bottom (Settings) -->
		<item name="android:textColorTertiary">@*android:color/accent_material_dark</item>
    </style>
    <style name="Oneplus.Theme.Material" parent="@*com.android.systemui:style/OneplusThemeBase">
        <item name="android:navigationBarColor">#ff000001</item>
    </style>
    <style name="Oneplus.Theme.Material.Light" parent="@*com.android.systemui:style/OneplusThemeLightBase">
        <item name="android:navigationBarColor">#ff000001</item>
    </style>
</resources>
