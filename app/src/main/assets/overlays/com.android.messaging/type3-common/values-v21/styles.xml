<?xml version="1.0" encoding="utf-8"?>
<resources>  
    <style name="AbstractComposeArea">
        <item name="android:background">@*android:color/holo_green_dark</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:backgroundTint">@*android:color/background_dark</item>
    </style>
    <style name="UnifiedEmailTheme" parent="@android:style/Theme.Material" />
    <style name="Base.Widget.AppCompat.Spinner" parent="@android:style/Widget.Material.Spinner">
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">#db4437</item>
        <item name="android:colorPrimaryDark">#b93221</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="android:colorControlActivated">@*android:color/accent_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/primary_material_dark</item>
        <item name="android:backgroundTint">@*android:color/background_dark</item>
    </style>
    <style name="NotificationPrimaryText">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="NotificationSecondaryText">
        <item name="android:textColor">#b3ffffff</item>
    </style>
    <style name="MessageInfoReadTextAppearance">
        <item name="android:textColor">#b3ffffff</item>
    </style>
    <style name="MessageInfoUnreadTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
