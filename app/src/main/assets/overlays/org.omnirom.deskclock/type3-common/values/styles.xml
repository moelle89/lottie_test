<resources>
    <style name="ControlAccentThemeOverlay" />
    <style name="Widget.Design.FloatingActionButton" parent="@android:style/Widget">
        <item name="backgroundTint">@*android:color/accent_material_dark</item>
		<item name="android:backgroundTint">@*android:color/accent_material_dark</item>
    </style>
