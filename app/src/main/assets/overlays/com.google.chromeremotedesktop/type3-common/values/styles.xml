<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
		<item name="android:statusBarColor">@*android:color/background_dark</item>
		<item name="android:alertDialogTheme">@android:style/Theme.Material.Dialog</item>
		<item name="android:dialogTheme">@android:style/Theme.Material.Dialog</item>
		<item name="android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="android:textColorPrimary">#ffffffff</item>
	    <item name="android:actionMenuTextAppearance">@android:style/TextAppearance.Material</item>
         <item name="android:actionMenuTextColor">#ffffffff</item>
		 <item name="android:textColor">#ffffff</item>
         <item name="android:navigationBarColor">@*android:color/background_dark</item>
         <item name="android:colorBackground">@*android:color/background_dark</item>
		 <item name="android:backgroundTint">@*android:color/background_dark</item>
		<item name="android:colorControlActivated">@*android:color/accent_material_dark</item>
		<item name="android:colorEdgeEffect">@*android:color/accent_material_dark</item>
		<item name="android:colorControlHighlight">@*android:color/holo_button_pressed</item>
    </style>
	
    <style name="BaseTheme" parent="@*com.google.chromeremotedesktop:style/Theme.AppCompat.Light.NoActionBar">
        <item name="*com.google.chromeremotedesktop:colorPrimary">@*android:color/background_dark</item>
        <item name="*com.google.chromeremotedesktop:colorPrimaryDark">@*android:color/background_dark</item>
        <item name="*com.google.chromeremotedesktop:colorAccent">@*android:color/accent_material_dark</item>
    </style>
    <style name="BaseTheme.NavigationDrawer" parent="@*com.google.chromeremotedesktop:style/BaseTheme">
        <item name="*com.google.chromeremotedesktop:windowNoTitle">true</item>
    </style>
    <style name="EmptyStateText" parent="@android:style/TextAppearance">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@*android:color/secondary_text_default_material_dark</item>
    </style>
    <style name="EmptyStateText.Hyperlink" parent="@*com.google.chromeremotedesktop:style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@*android:color/accent_material_dark</item>
    </style>
    <style name="NavigationTextStyle">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>