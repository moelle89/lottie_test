<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="@*com.google.chromeremotedesktop:style/Theme.AppCompat.Light.NoActionBar">
        <item name="*com.google.chromeremotedesktop:colorPrimary">@*android:color/background_dark</item>
        <item name="*com.google.chromeremotedesktop:colorPrimaryDark">@*android:color/background_dark</item>
        <item name="*com.google.chromeremotedesktop:colorAccent">@*android:color/accent_material_dark</item>
    </style>
    <style name="BaseTheme.NavigationDrawer" parent="@*com.google.chromeremotedesktop:style/BaseTheme">
        <item name="*com.google.chromeremotedesktop:windowNoTitle">true</item>
		<item name="android:backgroundTint">@*android:color/facelock_spotlight_mask</item>
    </style>
    <style name="EmptyStateText" parent="@android:style/TextAppearance">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@*android:color/secondary_text_default_material_dark</item>
    </style>
    <style name="EmptyStateText.Hyperlink" parent="@*com.google.chromeremotedesktop:style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@*android:color/accent_material_dark</item>
    </style>
    <style name="NavigationTextStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
