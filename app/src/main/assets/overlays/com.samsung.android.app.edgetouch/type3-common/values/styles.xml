<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:actionBarStyle">@*com.samsung.android.app.edgetouch:style/CustomActionBar</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
    </style>
    <style name="AppTheme.ActionBarFullScreen" parent="@*android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:popupMenuStyle">@*com.samsung.android.app.edgetouch:style/PopupMenuStyle</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
    </style>
    <style name="CustomActionBar" parent="@*android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@*android:color/transparent</item>
        <item name="android:titleTextStyle">@*com.samsung.android.app.edgetouch:style/ActionBarTitle</item>
    </style>
    <style name="Theme.AboutEdgeTouch" parent="@*android:style/Theme.DeviceDefault.Light">
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
