<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="DrawerItemTextActiveStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="DrawerItemTextInactiveStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@*android:color/holo_orange_light</item>
    </style>
    <style name="BaseTextStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="ContactsTheme" parent="@*com.google.android.contacts:style/BaseContactsTheme">
	    <item name="*com.google.android.contacts:fab_icon_tint">@*android:color/secondary_text_default_material_light</item>
        <item name="*com.google.android.contacts:fab_ripple_color">@*android:color/highlighted_text_holo_dark</item>
        <item name="*com.google.android.contacts:fab_background_tint">@*android:color/accent_material_dark</item>
		<item name="*com.google.android.contacts:button_bg_disabled">@*android:color/transparent</item>
        <item name="*com.google.android.contacts:chip_stroke_color">@*android:color/transparent</item>
        <item name="android:textColorSecondary">@*android:color/secondary_text_default_material_dark</item>        
		<item name="android:textColorPrimary">@android:color/white</item>    
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@null</item>
    </style>
    <style name="ContactsTheme.NoActionBar" parent="@*com.google.android.contacts:style/BaseContactsTheme.NoActionBar">
	    <item name="*com.google.android.contacts:fab_icon_tint">@*android:color/secondary_text_default_material_light</item>
        <item name="*com.google.android.contacts:fab_ripple_color">@*android:color/highlighted_text_holo_dark</item>
        <item name="*com.google.android.contacts:fab_background_tint">@*android:color/accent_material_dark</item>
        <item name="android:textColorSecondary">@*android:color/secondary_text_default_material_dark</item>        
		<item name="android:textColorPrimary">@android:color/white</item>        
		<item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@null</item>
    </style>
	<style name="BaseAppTheme" parent="@*com.google.android.contacts:style/Theme.GoogleMaterial.Dark">
	    <item name="*com.google.android.contacts:fab_icon_tint">@*android:color/holo_orange_light</item>
        <item name="*com.google.android.contacts:fab_ripple_color">@*android:color/user_icon_default_white</item>
        <item name="*com.google.android.contacts:button_bg_disabled">@*android:color/button_material_dark</item>
        <item name="*com.google.android.contacts:button_text_disabled">@*android:color/holo_orange_light</item>
        <item name="*com.google.android.contacts:chip_stroke_color">@*android:color/holo_orange_light</item>
        <item name="*com.google.android.contacts:colorAccent">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.contacts:colorControlNormal">@android:color/white</item>
        <item name="*com.google.android.contacts:fab_background_tint">@*android:color/accent_material_dark</item>
    </style>
</resources>
