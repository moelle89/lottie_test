<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.YouTube.Launcher" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@*com.vanced.android.youtube:drawable/quantum_launchscreen_youtube</item>
		<item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
		<item name="android:adjustViewBounds">true</item>				
		<item name="android:statusBarColor">@*android:color/transparent</item>
		<item name="android:navigationBarColor">@*android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
	</style>
	
    <style name="Theme.YouTube.Settings" parent="@*com.vanced.android.youtube:style/Theme.YouTube.Light.NoActionBar">
        <item name="*com.vanced.android.youtube:colorPrimary">#ff090a0c</item>
        <item name="*com.vanced.android.youtube:colorPrimaryDark">#ff090a0c</item>
        <item name="*com.vanced.android.youtube:colorAccent">#fff62b48</item>
        <item name="*com.vanced.android.youtube:colorControlActivated">#fff62b48</item>
	</style>

  <style name="Platform.AppCompat" parent="@*android:style/Theme.Material">
	  <item name="android:secondaryProgressTint">@*android:color/white</item>
	  <item name="*android:progressTint">#fff62b48</item>
	  <item name="android:indeterminateTint">#fff62b48</item>
	  <item name="android:checkBoxPreferenceStyle">@*android:style/Preference.DeviceDefault.CheckBoxPreference</item>
      <item name="android:windowBackground">@*android:color/background_dark</item>
	  <item name="android:statusBarColor">#ff090a0c</item>
      <item name="android:textColor">#ffffffff</item>
      <item name="android:windowActionBar">false</item>
	  <item name="android:windowNoTitle">true</item>
	  <item name="android:divider">@*android:color/transparent</item>		
	  <item name="android:dividerHorizontal">@*android:color/transparent</item>
	  <item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
  <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material">
  	  <item name="android:secondaryProgressTint">@*android:color/white</item>
	  <item name="*android:progressTint">#fff62b48</item>	
	  <item name="android:checkBoxPreferenceStyle">@*android:style/Preference.DeviceDefault.CheckBoxPreference</item>
      <item name="android:windowBackground">@*android:color/background_dark</item>
	  <item name="android:statusBarColor">#ff090a0c</item>
      <item name="android:textColor">#ffffffff</item>
	  <item name="android:windowActionBar">false</item>
	  <item name="android:windowNoTitle">true</item>
	  <item name="android:divider">@*android:color/transparent</item>		
	  <item name="android:dividerHorizontal">@*android:color/transparent</item>
	  <item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>

    <style name="Theme.YouTube.Light.Dialog" parent="@*android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:colorAccent">@*com.vanced.android.youtube:color/theme_main_color_accent</item>
        <item name="android:background">@*android:color/dim_foreground_light</item>
    </style>
    <style name="Widget.YouTube.Control" parent="@*com.vanced.android.youtube:style/Widget.YouTube">
        <item name="*com.vanced.android.youtube:colorControlSelected">@*com.vanced.android.youtube:color/color_brand_primary_alternate</item>
        <item name="*com.vanced.android.youtube:colorControlNormal">#ff9eaab6</item>
        <item name="*com.vanced.android.youtube:colorControlActivated">#fdfdfd</item>
    </style>
    <style name="AlertDialog.AppCompat" parent="@*com.vanced.android.youtube:style/Base.AlertDialog.AppCompat" >
	  <item name="android:backgroundTint">@null</item>
	</style>
    <style name="AlertDialog.AppCompat.Light" parent="@*com.vanced.android.youtube:style/Base.AlertDialog.AppCompat.Light" >
	  <item name="android:backgroundTint">@null</item>
	</style>
    <style name="Base.ThemeOverlay.AppCompat.Dialog" parent="@*com.vanced.android.youtube:style/Base.V7.ThemeOverlay.AppCompat.Dialog" >
	  <item name="android:backgroundTint">@null</item>
	</style>
    <style name="Base.ThemeOverlay.AppCompat.Dialog.Alert" parent="@*com.vanced.android.youtube:style/Base.ThemeOverlay.AppCompat.Dialog">
        <item name="*com.vanced.android.youtube:windowMinWidthMajor">@*com.vanced.android.youtube:dimen/abc_dialog_min_width_major</item>
        <item name="*com.vanced.android.youtube:windowMinWidthMinor">@*com.vanced.android.youtube:dimen/abc_dialog_min_width_minor</item>
	    <item name="android:backgroundTint">@null</item>
	</style>
	<style name="SpinnerItem.Dropdown" parent="@*com.vanced.android.youtube:style/SpinnerItem">
		<item name="android:textColor">#ffe6f0ff</item>
	    <item name="android:backgroundTint">@null</item>
	</style>

    <style name="VideoDurationOverlay">
        <item name="android:textSize">12.0sp</item>
		<item name="android:textStyle">bold</item>
        <item name="android:textColor">@*com.vanced.android.youtube:color/endscreen_video_item_duration_text_color</item>
        <item name="android:background">@*com.vanced.android.youtube:drawable/video_duration_background</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    <style name="StandaloneDurationBadgesOverlay" parent="@*com.vanced.android.youtube:style/StandaloneBadges">
        <item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
        <item name="android:background">@*com.vanced.android.youtube:drawable/duration_background</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:layout_marginEnd">8.0dip</item>
    </style>
	
</resources>