<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@*android:id/background"
        android:gravity="fill_horizontal|center">
		<shape android:shape="rectangle" android:tint="?android:colorButtonNormal">
            <size android:height="5.0dp" />
            <solid android:color="#92000000" />
            <corners android:radius="14.0dip" />
        </shape>
    </item>
    <item android:id="@*android:id/secondaryProgress"
        android:gravity="fill_horizontal|center">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="5.0dp" />
				<corners android:radius="14.0dip" />
                <solid android:color="#30000000" />
            </shape>
        </scale>
    </item>
    <item android:id="@*android:id/progress">
		<layer-list>
			<item android:id="@*android:id/progress"
				android:gravity="fill_horizontal|center">
				<scale android:scaleWidth="100%">
					<shape android:shape="rectangle">
						<size android:height="5.5dp" />
						<corners android:radius="14.0dip" />
						<gradient android:startColor="@*android:color/holo_green_light" android:endColor="@*android:color/highlighted_text_holo_dark" />
					</shape>
				</scale>
			</item>
			<item>
				<clip
					android:clipOrientation="horizontal"
					android:gravity="start"
					android:drawable="@*android:drawable/progress_primary_holo_dark"/>
			</item>
		</layer-list>
	</item>
</layer-list>