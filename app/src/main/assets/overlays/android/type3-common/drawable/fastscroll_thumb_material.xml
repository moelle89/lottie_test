<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:tint="?android:attr/colorAccent" android:shape="rectangle">
			<stroke android:width="1.2dip" android:color="?android:attr/colorAccent" />
            <solid android:color="#96FFFFFF" />
			<corners android:radius="@*android:dimen/control_corner_material" />
			<size android:height="30.0dip" android:width="6.0dip" />
        </shape>
    </item>
    <item>
        <shape android:tint="?android:attr/colorAccent" android:shape="rectangle">
			<stroke android:width="1.2dip" android:color="#96FFFFFF" />
             <solid android:color="#3CFFFFFF" />
			<corners android:radius="@*android:dimen/control_corner_material" />
			<size android:height="30.0dip" android:width="6.0dip" />
        </shape>
    </item>
</selector>