<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item  android:bottom="10dp">
            <shape android:tint="@*android:color/background_dark">
                <gradient
                    android:startColor="#ff000000"
                    android:endColor="#ff000000"
                    android:angle="-90" />
            </shape>
        </item>
        <item android:bottom="0dp" android:left="5dp" android:right="5dp">
            <shape android:tint="@*android:color/dim_foreground_light" >
                <gradient
                    android:startColor="#ff000000"
                    android:centerColor="#a6000000"
                    android:endColor="#00000000"
                    android:angle="90" />
                <corners android:radius="1dp"
                    android:bottomRightRadius="15dp" android:bottomLeftRadius="15dp"
                    android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
            </shape>
        </item>
</layer-list>