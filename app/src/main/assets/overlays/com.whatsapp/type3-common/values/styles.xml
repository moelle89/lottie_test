<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Theme -->
    <style name="Theme.App" parent="@*com.whatsapp:style/Theme.AppCompat">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fastScrollThumbDrawable">@*com.whatsapp:drawable/fastscroll_thumb</item>
        <item name="android:fastScrollTrackDrawable">@*com.whatsapp:drawable/fastscroll_track</item>
        <item name="*com.whatsapp:windowActionModeOverlay">true</item>
        <item name="*com.whatsapp:actionBarStyle">@*com.whatsapp:style/Widget.Styled.ActionBar</item>
        <item name="*com.whatsapp:actionBarSize">@*com.whatsapp:dimen/actionbar_height</item>
        <item name="*com.whatsapp:actionModeBackground">@*com.whatsapp:color/action_mode</item>
        <item name="*com.whatsapp:toolbarStyle">@*com.whatsapp:style/Widget.Styled.Toolbar</item>
        <item name="*com.whatsapp:panelMenuListTheme">@*com.whatsapp:style/PanelMenuList</item>
        <item name="*com.whatsapp:colorPrimary">@*com.whatsapp:color/primary</item>
        <item name="*com.whatsapp:colorPrimaryDark">@*com.whatsapp:color/primary_dark</item>
        <item name="*com.whatsapp:colorAccent">@*com.whatsapp:color/accent</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>

    <style name="Theme.App.Home" parent="@*com.whatsapp:style/Theme.App">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:fastScrollThumbDrawable">@*com.whatsapp:drawable/fastscroll_thumb_home</item>
        <item name="android:fastScrollTrackDrawable">@*com.whatsapp:drawable/fastscroll_track</item>
        <item name="*com.whatsapp:windowActionBar">false</item>
        <item name="*com.whatsapp:windowNoTitle">true</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="*com.whatsapp:pstsIndicatorColor">@*com.whatsapp:color/tab_indicator</item>
        <item name="*com.whatsapp:pstsDividerColor">@android:color/transparent</item>
        <item name="*com.whatsapp:pstsIndicatorHeight">3.0dip</item>
        <item name="*com.whatsapp:pstsUnderlineHeight">1.0dip</item>
        <item name="*com.whatsapp:pstsTabPaddingLeftRight">8.0dip</item>
        <item name="*com.whatsapp:pstsShouldExpand">true</item>
    </style>

    <!-- Gallery -->
    <style name="Theme.App.GalleryPicker" parent="@*com.whatsapp:style/Theme.App">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="*com.whatsapp:actionOverflowButtonStyle">@*com.whatsapp:style/OverFlowLight</item>
        <item name="*com.whatsapp:actionBarStyle">@*com.whatsapp:style/Widget.Styled.ActionBar.GalleryPicker</item>
        <item name="*com.whatsapp:actionModeBackground">@*com.whatsapp:color/action_mode</item>
        <item name="*com.whatsapp:homeAsUpIndicator">@*com.whatsapp:drawable/ic_back_shadow</item>
        <item name="*com.whatsapp:searchViewStyle">@*com.whatsapp:style/GalleryPickerSearchView</item>
        <item name="*com.whatsapp:colorPrimary">@*android:color/background_dark</item>
        <item name="*com.whatsapp:colorPrimaryDark">@*android:color/background_dark</item>
        <item name="*com.whatsapp:colorAccent">@*com.whatsapp:color/accent</item>
    </style>

    <!-- Expl: Anzahl Gruppenmitglieder -->
    <style name="FlatCardInfo" parent="@*android:style/Widget.TextView">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4.0dip</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Request Permission Statusbar -->
    <style name="Theme.RequestPermission" parent="@*com.whatsapp:style/Theme.App">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="*com.whatsapp:windowActionBar">false</item>
        <item name="*com.whatsapp:windowNoTitle">true</item>
        <item name="*com.whatsapp:colorPrimaryDark">@*com.whatsapp:color/primary</item>
        <item name="*com.whatsapp:colorAccent">@*com.whatsapp:color/accent</item>
    </style>

    <style name="DateDivider">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@*com.whatsapp:drawable/date_balloon</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@*com.whatsapp:dimen/conversation_date_divider_marginbottom</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

<!-- Text Styles -->

    <!-- Expl: POermission Dialog Text -->
    <style name="Text" parent="@*android:style/TextAppearance">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="Text.Bullet" parent="@*com.whatsapp:style/Text.Steps">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffdddddd</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:text">@*com.whatsapp:string/contacts_help_bullet</item>
    </style>
    <style name="Text.Description" parent="@*com.whatsapp:style/Text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffdddddd</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>
    <style name="Text.Field" parent="@*com.whatsapp:style/Text">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffdddddd</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>
    <style name="Text.FieldHeader" parent="@*com.whatsapp:style/Text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffdddddd</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>
    <style name="InfoCard">
		<item name="android:backgroundTint">@*android:color/background_dark</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@*com.whatsapp:dimen/info_screen_card_spacing</item>
        <item name="android:paddingBottom">@*com.whatsapp:dimen/info_screen_card_spacing</item>
        <item name="*com.whatsapp:icBottomDrawable">@*com.whatsapp:drawable/list_separator_top</item>
        <item name="*com.whatsapp:icTopDrawable">@*com.whatsapp:drawable/list_separator_bot</item>
    </style>
    <style name="Text.Steps" parent="@*com.whatsapp:style/Text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffdddddd</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="Theme.MediaView" parent="@*com.whatsapp:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="*com.whatsapp:actionBarStyle">@*com.whatsapp:style/Widget.Styled.ActionBar.MediaView</item>
        <item name="*com.whatsapp:actionBarSize">@*com.whatsapp:dimen/actionbar_height</item>
        <item name="*com.whatsapp:toolbarStyle">@*com.whatsapp:style/Widget.Styled.Toolbar</item>
        <item name="*com.whatsapp:colorAccent">@*com.whatsapp:color/accent</item>
    </style>

    <!-- Edit Dialog (FullScreen) Buttons -->
    <style name="ActionBarButtonStyle" parent="@*com.whatsapp:style/Widget.AppCompat.ActionButton" >
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.App.Black" parent="@*com.whatsapp:style/Theme.App">
        <item name="android:backgroundTint">@*android:color/background_dark</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="*com.whatsapp:colorPrimary">@*android:color/background_dark</item>
        <item name="*com.whatsapp:colorPrimaryDark">@android:color/transparent</item>
    </style>
    <style name="Theme.Prefs" parent="@*com.whatsapp:style/Theme.App">
        <item name="android:icon">@null</item>
        <item name="*com.whatsapp:icon">@null</item>
		<item name="android:backgroundTint">@*android:color/background_dark</item>
		<item name="android:windowBackground">@*android:color/background_dark</item>		
    </style>
    <style name="Theme.App.SettingsLight" parent="@*com.whatsapp:style/Theme.Prefs">
        <item name="android:backgroundTint">@*android:color/background_dark</item>     
		<item name="*com.whatsapp:settingsBackgroundColor">@*android:color/background_dark</item>
        <item name="*com.whatsapp:settingsDividerColor">@*com.whatsapp:color/settings_divider</item>
        <item name="*com.whatsapp:settingsIconColor">@*com.whatsapp:color/settings_icon</item>
        <item name="*com.whatsapp:settingsProfilePhotoOutlineColor">@*com.whatsapp:color/settings_profile_photo_outline</item>
        <item name="*com.whatsapp:settingsSubtitleTextColor">@*com.whatsapp:color/settings_item_subtitle_text</item>
        <item name="*com.whatsapp:settingsTitleTextColor">@*com.whatsapp:color/settings_item_title_text</item>
    </style>
</resources>
