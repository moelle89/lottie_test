<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@*com.whatsapp:id/send_current_location_btn"
    android:layout_width="wrap_content"
    android:layout_height="@*com.whatsapp:dimen/location_picker_row_height"
    android:background="@*com.whatsapp:drawable/selector_orange_gradient">

    <FrameLayout
        android:layout_width="@*com.whatsapp:dimen/location_picker_row_height"
        android:layout_height="@*com.whatsapp:dimen/location_picker_row_height"
        android:layout_gravity="left">

        <ImageView
            android:id="@*com.whatsapp:id/send_current_location_icon"
            android:layout_width="@*com.whatsapp:dimen/location_picker_icon_size"
            android:layout_height="@*com.whatsapp:dimen/location_picker_icon_size"
            android:layout_gravity="center"
            android:background="@*com.whatsapp:drawable/send_current_location_background"
            android:scaleType="center"
            android:src="@*com.whatsapp:drawable/ic_current_location"
            android:tint="@*com.whatsapp:color/list_item_verified_title" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="@*com.whatsapp:dimen/location_picker_row_height">

        <TextView
            android:id="@*com.whatsapp:id/send_current_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@*com.whatsapp:string/send_this_location"
            android:textAppearance="?android:textAppearanceSmallInverse"
            android:textColor="@android:color/white"
            android:textSize="17.0sp" />

        <TextView
            android:id="@*com.whatsapp:id/location_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#aaffffff"
            android:textSize="14.0sp" />
    </LinearLayout>

    <View
        android:id="@*com.whatsapp:id/this_location_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_gravity="bottom"
        android:background="@*com.whatsapp:color/divider_gray"
        android:visibility="gone" />
</FrameLayout>