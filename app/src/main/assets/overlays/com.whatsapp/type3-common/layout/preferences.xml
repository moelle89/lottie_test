<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:title="@*com.whatsapp:string/settings_general"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatsapp="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@*com.whatsapp:id/profile_info"
            android:paddingTop="16.0dip"
            android:paddingBottom="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@*com.whatsapp:id/contact_selector"
                android:paddingLeft="@*com.whatsapp:dimen/list_row_padding"
                android:layout_width="wrap_content"
                android:layout_height="@*com.whatsapp:dimen/conversations_row_height"
                android:layout_alignParentLeft="true">

                <com.whatsapp.ThumbnailButton
                    android:enabled="false"
                    android:layout_gravity="center|left"
                    android:id="@*com.whatsapp:id/profile_info_photo"
                    android:layout_width="@*com.whatsapp:dimen/pref_profile_small_photo_size"
                    android:layout_height="@*com.whatsapp:dimen/pref_profile_small_photo_size"
                    android:src="@*com.whatsapp:drawable/avatar_contact"
                    android:scaleType="fitCenter"
                    whatsapp:tbtnRadius="@*com.whatsapp:dimen/mid_avatar_radius"
                    whatsapp:tbtnForegroundOnly="true" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@*com.whatsapp:dimen/list_row_padding"
                android:paddingRight="@*com.whatsapp:dimen/list_row_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@*com.whatsapp:id/contact_selector"
                android:layout_centerVertical="true"
                android:layout_alignWithParentIfMissing="true">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <com.whatsapp.TextEmojiLabel
                        android:textSize="19.0sp"
                        android:textColor="#ffffffff"
                        android:layout_gravity="center|left"
                        android:id="@*com.whatsapp:id/profile_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        style="@*com.whatsapp:style/ListItemTitle" />
                </FrameLayout>

                <com.whatsapp.TextEmojiLabel
                    android:textSize="15.0sp"
                    android:textStyle="normal"
                    android:textColor="@android:color/holo_green_light"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:id="@*com.whatsapp:id/profile_info_status"
                    android:paddingTop="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    style="@*com.whatsapp:style/ListItemSubtitle" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:background="@android:color/background_dark"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip" />

        <FrameLayout
            android:id="@*com.whatsapp:id/business_settings"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="66.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:paddingLeft="25.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_business_about"
                android:tint="#FFFFFF"/>

            <TextView
                android:textSize="17.0sp"
                android:textColor="@*android:color/secondary_text_default_material_dark"
                android:layout_gravity="center|left"
                android:id="@*com.whatsapp:id/business_settings_label"
                android:paddingLeft="72.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </FrameLayout>

        <View
            android:id="@*com.whatsapp:id/business_settings_divider"
            android:background="@android:color/background_dark"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="72.0dip" />

        <FrameLayout
            android:id="@*com.whatsapp:id/account_info"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="66.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:paddingLeft="25.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_settings_account"
                android:tint="#FFFFFF" />

            <TextView
                android:textSize="17.0sp"
                android:textColor="@*android:color/secondary_text_default_material_dark"
                android:layout_gravity="center|left"
                android:paddingLeft="72.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/settings_account_info"
                android:singleLine="true" />
        </FrameLayout>

        <View
            android:background="@android:color/background_dark"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="72.0dip" />

        <FrameLayout
            android:id="@*com.whatsapp:id/settings_chat"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="66.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:paddingLeft="25.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_settings_chat"
                android:tint="#FFFFFF" />

            <TextView
                android:textSize="17.0sp"
                android:textColor="@*android:color/secondary_text_default_material_dark"
                android:layout_gravity="center|left"
                android:paddingLeft="72.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/settings_chat"
                android:singleLine="true" />
        </FrameLayout>

        <View
            android:background="@android:color/background_dark"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="72.0dip" />

        <FrameLayout
            android:id="@*com.whatsapp:id/notifications"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="66.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:paddingLeft="25.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_settings_notifications"
                android:tint="#FFFFFF" />

            <TextView
                android:textSize="17.0sp"
                android:textColor="@*android:color/secondary_text_default_material_dark"
                android:layout_gravity="center|left"
                android:paddingLeft="72.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/settings_notifications"
                android:singleLine="true" />
        </FrameLayout>

        <View
            android:id="@*com.whatsapp:id/payments_divider"
            android:background="@android:color/background_dark"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="72.0dip" />

        <FrameLayout
            android:id="@*com.whatsapp:id/settings_payments"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="66.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:paddingLeft="25.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_settings_payments"
                android:tint="#FFFFFF" />

            <TextView
                android:textSize="17.0sp"
                android:textColor="@*android:color/secondary_text_default_material_dark"
                android:layout_gravity="center|left"
                android:paddingLeft="72.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/payments_activity_title"
                android:singleLine="true" />
        </FrameLayout>

        <View
            android:background="@android:color/background_dark"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="72.0dip" />

        <FrameLayout
            android:id="@*com.whatsapp:id/settings_data_usage"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="66.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:paddingLeft="25.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_settings_data"
                android:tint="#FFFFFF" />

            <TextView
                android:textSize="17.0sp"
                android:textColor="@*android:color/secondary_text_default_material_dark"
                android:layout_gravity="center|left"
                android:id="@*com.whatsapp:id/settings_data_usage_text"
                android:paddingLeft="72.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/settings_data_and_storage_usage"
                android:singleLine="true" />
        </FrameLayout>

        <View
            android:background="@android:color/background_dark"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="72.0dip" />

        <FrameLayout
            android:id="@*com.whatsapp:id/setting_tell_a_friend"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="66.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:paddingLeft="25.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_settings_contacts"
                android:tint="#FFFFFF" />

            <TextView
                android:textSize="17.0sp"
                android:textColor="@*android:color/secondary_text_default_material_dark"
                android:layout_gravity="center|left"
                android:paddingLeft="72.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/tell_a_friend"
                android:singleLine="true" />
        </FrameLayout>

        <View
            android:background="@android:color/background_dark"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="72.0dip" />

        <FrameLayout
            android:id="@*com.whatsapp:id/settings_help"
            android:background="@*com.whatsapp:drawable/selector_orange_gradient"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="66.0dip">

            <ImageView
                android:layout_gravity="center|left"
                android:paddingLeft="25.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_settings_help"
                android:tint="#FFFFFF" />

            <TextView
                android:textSize="17.0sp"
                android:textColor="@*android:color/secondary_text_default_material_dark"
                android:layout_gravity="center|left"
                android:paddingLeft="72.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/settings_help"
                android:singleLine="true" />
        </FrameLayout>

        <View
            android:background="@android:color/background_dark"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="72.0dip" />
    </LinearLayout>
</ScrollView>