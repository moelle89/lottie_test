<?xml version="1.0" encoding="utf-8"?>
<com.whatsapp.EmojiPopupLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@*com.whatsapp:id/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="480.0dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@*com.whatsapp:id/prev_btn_ext"
                android:layout_width="40.0dip"
                android:layout_height="48.0dip" />

            <View
                android:id="@*com.whatsapp:id/next_btn_ext"
                android:layout_width="40.0dip"
                android:layout_height="48.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@*com.whatsapp:drawable/popup_rounded_corner"
            android:clipChildren="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@*com.whatsapp:drawable/popup_rounded_header"
                android:backgroundTint="#ff075e55"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip">

                <ImageView
                    android:id="@*com.whatsapp:id/popup_thumb"
                    android:layout_width="38.0dip"
                    android:layout_height="38.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginRight="2.0dip"
                    android:layout_marginTop="5.0dip"
                    android:scaleType="fitCenter"
                    android:src="@*com.whatsapp:mipmap/icon" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <com.whatsapp.TextEmojiLabel
                        android:id="@*com.whatsapp:id/popup_title"
                        style="@*com.whatsapp:style/Theme.ActionBar.TitleTextStyle.Condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:lines="1"
                        android:paddingLeft="4.0dip"
                        android:paddingRight="4.0dip"
                        android:singleLine="true" />

                    <TextView
                        android:id="@*com.whatsapp:id/conversation_contact_status"
                        style="@*com.whatsapp:style/Theme.ActionBar.SubtitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="-3.0dip"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:lines="1"
                        android:paddingLeft="4.0dip"
                        android:singleLine="true" />
                </LinearLayout>

                <View
                    android:id="@*com.whatsapp:id/navigation_divider"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8.0dip"
                    android:layout_marginTop="8.0dip"
                    android:background="@*com.whatsapp:color/actionbar_separator"
                    android:orientation="horizontal" />

                <FrameLayout
                    android:id="@*com.whatsapp:id/navigation_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip">

                    <TextView
                        android:id="@*com.whatsapp:id/popup_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@*com.whatsapp:color/white"
                        android:textSize="12.0dip" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@*com.whatsapp:id/prev_btn"
                            android:layout_width="24.0dip"
                            android:layout_height="32.0dip"
                            android:paddingTop="16.0dip"
                            android:src="@*com.whatsapp:drawable/selector_media_prev" />

                        <ImageView
                            android:id="@*com.whatsapp:id/next_btn"
                            android:layout_width="26.0dip"
                            android:layout_height="32.0dip"
                            android:paddingRight="2.0dip"
                            android:paddingTop="16.0dip"
                            android:src="@*com.whatsapp:drawable/selector_media_next" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@*com.whatsapp:id/conversation_entry_holder"
                android:layout_width="fill_parent"
                android:layout_height="148.0dip"
                android:clipChildren="false">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@*com.whatsapp:dimen/popup_gallery_height"
                    android:clipChildren="true">

                    <com.whatsapp.notification.PopupNotificationViewPager
                        android:id="@*com.whatsapp:id/message_view_pager"
                        android:layout_width="fill_parent"
                        android:layout_height="@*com.whatsapp:dimen/popup_gallery_height"
                        android:background="#00000000" />

                    <FrameLayout
                        android:id="@*com.whatsapp:id/voice_recorder_decor"
                        android:layout_width="fill_parent"
                        android:layout_height="@*com.whatsapp:dimen/popup_gallery_height"
                        android:background="#00000000"
                        android:visibility="gone" />
                </RelativeLayout>

                <include layout="@*com.whatsapp:layout/conversation_entry" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="58.0dip"
                android:layout_marginTop="3.0dip"
                android:background="@*com.whatsapp:drawable/popup_rounded_footer"
                android:backgroundTint="@*com.whatsapp:color/background_material_dark"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@*com.whatsapp:id/popup_ok_btn"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:background="?android:actionBarItemBackground"
                    android:text="@*com.whatsapp:string/close" />

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="#ffd9d7d0" />

                <Button
                    android:id="@*com.whatsapp:id/popup_action_btn"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:background="?android:actionBarItemBackground"
                    android:text="@*com.whatsapp:string/view" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@*com.whatsapp:id/proximity_overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f0000000"
        android:visibility="gone" />

    <com.whatsapp.emoji.search.EmojiSearchContainer
        android:id="@*com.whatsapp:id/popup_search_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />
</com.whatsapp.EmojiPopupLayout>