<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@*com.whatsapp:id/quoted_message_holder"
                style="@*com.whatsapp:style/QuotedFrame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <FrameLayout
                android:id="@*com.whatsapp:id/media_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@*com.whatsapp:dimen/conversation_video_thumb_padding">

                <view
                    android:id="@*com.whatsapp:id/image"
                    class="com.whatsapp.conversationrow.ConversationRowImage$RowImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop" />

                <FrameLayout
                    android:id="@*com.whatsapp:id/control_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@*com.whatsapp:drawable/download_background">

                    <com.whatsapp.CircularProgressBar
                        android:id="@*com.whatsapp:id/progress_bar"
                        android:layout_width="64.0dip"
                        android:layout_height="64.0dip"
                        android:layout_gravity="center"
                        android:indeterminateOnly="false"
                        android:indeterminateTint="@android:color/white"
                        android:indeterminateTintMode="src_atop"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@*com.whatsapp:id/cancel_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@*com.whatsapp:drawable/btn_cancel"
                        android:visibility="gone" />

                    <Button
                        android:id="@*com.whatsapp:id/control_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:drawableLeft="@*com.whatsapp:drawable/btn_upload"
                        android:drawablePadding="8.0dip"
                        android:ellipsize="none"
                        android:paddingLeft="20.0dip"
                        android:paddingRight="20.0dip"
                        android:singleLine="true"
                        android:stateListAnimator="@null"
                        android:textColor="@*com.whatsapp:color/conversation_row_image_text" />
                </FrameLayout>
            </FrameLayout>

            <com.whatsapp.TextAndDateLayout
                android:id="@*com.whatsapp:id/text_and_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.whatsapp.TextEmojiLabel
                    android:id="@*com.whatsapp:id/caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="-1.0dip"
                    android:paddingBottom="@*com.whatsapp:dimen/conversation_video_thumb_padding"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:textColor="#ddffffff"
                    android:textSize="@*com.whatsapp:dimen/conversation_text_row_tv" />

                <LinearLayout
                    android:id="@*com.whatsapp:id/date_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|right"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@*com.whatsapp:id/date"
                        style="@*com.whatsapp:style/ConversationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@*com.whatsapp:color/conversation_row_image_text" />

                    <ImageView
                        android:id="@*com.whatsapp:id/status"
                        android:layout_width="19.0dip"
                        android:layout_height="10.0dip"
                        android:paddingLeft="4.0dip"
                        android:scaleType="center" />
                </LinearLayout>
            </com.whatsapp.TextAndDateLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@*com.whatsapp:id/forward"
        style="@*com.whatsapp:style/ForwardButton"
        android:contentDescription="@*com.whatsapp:string/conversation_menu_forward" />
</merge>