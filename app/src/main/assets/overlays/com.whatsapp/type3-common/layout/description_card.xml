<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@*com.whatsapp:id/description_card"
    android:visibility="gone"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:background="@*android:color/background_dark"
        android:paddingLeft="@*com.whatsapp:dimen/info_screen_padding"
        android:paddingTop="12.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:id="@*com.whatsapp:id/has_description_view"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/description"
                style="@*com.whatsapp:style/FlatCardTitle" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.whatsapp.ReadMoreTextView android:textColor="@*com.whatsapp:color/list_item_title"
                    android:id="@*com.whatsapp:id/group_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:rmtvLines="3"
                    app:rmtvLinkColor="@*com.whatsapp:color/link_color_incoming"
                    app:rmtvLinkSelectionColor="@*com.whatsapp:color/link_color_selected"
                    app:rmtvText="@*com.whatsapp:string/read_more"
                    xmlns:app="http://schemas.android.com/apk/res-auto" />

                <ProgressBar
                    android:id="@*com.whatsapp:id/change_description_progress"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:progressBarStyleSmallInverse" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@*com.whatsapp:id/no_description_view"
            android:paddingTop="4.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/add_group_description"
            style="@*com.whatsapp:style/ListItemTitle" />
    </LinearLayout>

</LinearLayout>