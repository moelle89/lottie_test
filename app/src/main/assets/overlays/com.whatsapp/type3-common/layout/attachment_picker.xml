<?xml version="1.0" encoding="utf-8"?>
<com.whatsapp.CircularRevealView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatsapp="http://schemas.android.com/apk/com.whatsapp"
    android:id="@*com.whatsapp:id/paper_clip_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@*com.whatsapp:color/attach_popup_background"
    android:backgroundTint="@*com.whatsapp:color/attach_popup_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="1.5dip"
    android:paddingBottom="4.0dip"
    android:visibility="gone">

    <LinearLayout
        android:id="@*com.whatsapp:id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@*com.whatsapp:color/attach_popup_background"
        android:backgroundTint="@*com.whatsapp:color/attach_popup_background"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@*com.whatsapp:id/attach_picker_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8.0dip"
            android:paddingTop="@*com.whatsapp:dimen/attach_popup_vertical_padding">

            <LinearLayout
                android:id="@*com.whatsapp:id/pickfiletype_document_holder"
                style="@*com.whatsapp:style/AttachPickerItem">

                <com.whatsapp.ThumbnailButton
                    android:id="@*com.whatsapp:id/pickfiletype_document"
                    style="@*com.whatsapp:style/AttachPickerIcon"
                    android:contentDescription="@*com.whatsapp:string/attach_document"
                    android:src="@*com.whatsapp:drawable/attach_document"
                    whatsapp:tbtnForegroundOnly="true"
                    whatsapp:tbtnRadius="-1.0dip" />

                <com.whatsapp.CondensedTextView
                    style="@*com.whatsapp:style/AttachPickerLabel"
                    android:text="@*com.whatsapp:string/attach_document" />
            </LinearLayout>

            <LinearLayout
                android:id="@*com.whatsapp:id/pickfiletype_camera_holder"
                style="@*com.whatsapp:style/AttachPickerItem">

                <com.whatsapp.ThumbnailButton
                    android:id="@*com.whatsapp:id/pickfiletype_camera"
                    style="@*com.whatsapp:style/AttachPickerIcon"
                    android:contentDescription="@*com.whatsapp:string/attach_camera"
                    android:src="@*com.whatsapp:drawable/attach_camera"
                    whatsapp:tbtnForegroundOnly="true"
                    whatsapp:tbtnRadius="-1.0dip" />

                <com.whatsapp.CondensedTextView
                    style="@*com.whatsapp:style/AttachPickerLabel"
                    android:text="@*com.whatsapp:string/attach_camera" />
            </LinearLayout>

            <LinearLayout
                android:id="@*com.whatsapp:id/pickfiletype_payment_holder"
                style="@*com.whatsapp:style/AttachPickerItem"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@*com.whatsapp:id/pickfiletype_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@*com.whatsapp:drawable/payment_attach_background">

                    <com.whatsapp.PaymentsIconView
                        android:id="@*com.whatsapp:id/pickfiletype_payment_text"
                        style="@*com.whatsapp:style/AttachPickerIcon"
                        android:layout_centerInParent="true"
                        android:textColor="@*com.whatsapp:color/white"
                        android:textSize="23.0dip" />
                </RelativeLayout>

                <com.whatsapp.CondensedTextView
                    style="@*com.whatsapp:style/AttachPickerLabel"
                    android:text="@*com.whatsapp:string/payment" />
            </LinearLayout>

            <LinearLayout
                android:id="@*com.whatsapp:id/pickfiletype_gallery_holder"
                style="@*com.whatsapp:style/AttachPickerItem">

                <com.whatsapp.ThumbnailButton
                    android:id="@*com.whatsapp:id/pickfiletype_gallery"
                    style="@*com.whatsapp:style/AttachPickerIcon"
                    android:contentDescription="@*com.whatsapp:string/attach_picture_from_gallery"
                    android:src="@*com.whatsapp:drawable/attach_gallery"
                    whatsapp:tbtnForegroundOnly="true"
                    whatsapp:tbtnRadius="-1.0dip" />

                <com.whatsapp.CondensedTextView
                    style="@*com.whatsapp:style/AttachPickerLabel"
                    android:text="@*com.whatsapp:string/attach_picture_from_gallery" />
            </LinearLayout>

            <LinearLayout
                android:id="@*com.whatsapp:id/pickfiletype_product_holder"
                style="@*com.whatsapp:style/AttachPickerItem"
                android:visibility="gone">

                <com.whatsapp.ThumbnailButton
                    android:id="@*com.whatsapp:id/pickfiletype_product"
                    style="@*com.whatsapp:style/AttachPickerIcon"
                    android:contentDescription="@*com.whatsapp:string/attach_product"
                    whatsapp:tbtnForegroundOnly="true"
                    whatsapp:tbtnRadius="-1.0dip" />

                <com.whatsapp.CondensedTextView
                    style="@*com.whatsapp:style/AttachPickerLabel"
                    android:text="@*com.whatsapp:string/attach_product" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@*com.whatsapp:id/attach_picker_second_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@*com.whatsapp:dimen/attach_popup_vertical_padding">

            <LinearLayout
                android:id="@*com.whatsapp:id/pickfiletype_audio_holder"
                style="@*com.whatsapp:style/AttachPickerItem">

                <com.whatsapp.ThumbnailButton
                    android:id="@*com.whatsapp:id/pickfiletype_audio"
                    style="@*com.whatsapp:style/AttachPickerIcon"
                    android:contentDescription="@*com.whatsapp:string/attach_audio"
                    android:src="@*com.whatsapp:drawable/attach_audio"
                    whatsapp:tbtnForegroundOnly="true"
                    whatsapp:tbtnRadius="-1.0dip" />

                <com.whatsapp.CondensedTextView
                    style="@*com.whatsapp:style/AttachPickerLabel"
                    android:text="@*com.whatsapp:string/attach_audio" />
            </LinearLayout>

            <LinearLayout
                android:id="@*com.whatsapp:id/pickfiletype_location_holder"
                style="@*com.whatsapp:style/AttachPickerItem">

                <com.whatsapp.ThumbnailButton
                    android:id="@*com.whatsapp:id/pickfiletype_location"
                    style="@*com.whatsapp:style/AttachPickerIcon"
                    android:contentDescription="@*com.whatsapp:string/attach_location"
                    android:src="@*com.whatsapp:drawable/attach_location"
                    whatsapp:tbtnForegroundOnly="true"
                    whatsapp:tbtnRadius="-1.0dip" />

                <com.whatsapp.CondensedTextView
                    style="@*com.whatsapp:style/AttachPickerLabel"
                    android:text="@*com.whatsapp:string/attach_location" />
            </LinearLayout>

            <LinearLayout
                android:id="@*com.whatsapp:id/pickfiletype_contact_holder"
                style="@*com.whatsapp:style/AttachPickerItem">

                <com.whatsapp.ThumbnailButton
                    android:id="@*com.whatsapp:id/pickfiletype_contact"
                    style="@*com.whatsapp:style/AttachPickerIcon"
                    android:contentDescription="@*com.whatsapp:string/attach_contact"
                    android:src="@*com.whatsapp:drawable/attach_contact"
                    whatsapp:tbtnForegroundOnly="true"
                    whatsapp:tbtnRadius="-1.0dip" />

                <com.whatsapp.CondensedTextView
                    style="@*com.whatsapp:style/AttachPickerLabel"
                    android:text="@*com.whatsapp:string/attach_contact" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.whatsapp.CircularRevealView>