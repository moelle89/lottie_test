<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:id="@*com.whatsapp:id/control_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@*com.whatsapp:drawable/exo_player_gray_circle">

        <ImageButton
            android:id="@*com.whatsapp:id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:clickable="false"
            android:focusable="false" />
    </FrameLayout>

    <FrameLayout
        android:id="@*com.whatsapp:id/main_controls"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@*com.whatsapp:id/back"
            style="@*com.whatsapp:style/ActionBarButtonStyle"
            android:layout_width="64.0dip"
            android:layout_height="64.0dip"
            android:layout_gravity="start|center|top"
            android:layout_marginTop="32.0dip"
            android:src="@*com.whatsapp:drawable/ic_cam_back" />

        <LinearLayout
            android:id="@*com.whatsapp:id/footerView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@*com.whatsapp:id/controls"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="24.0dip"
                android:paddingRight="24.0dip">

                <TextView
                    android:id="@*com.whatsapp:id/time_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="30.0dip"
                    android:paddingEnd="4.0dip"
                    android:paddingTop="30.0dip"
                    android:shadowColor="@*com.whatsapp:color/media_view_action_bar_background"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5.0"
                    android:textColor="@android:color/white"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@*com.whatsapp:id/mediacontroller_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:maxHeight="3.0dip"
                    android:minHeight="3.0dip"
                    android:paddingBottom="30.0dip"
                    android:paddingTop="30.0dip"
                    android:progressDrawable="@*com.whatsapp:drawable/wa_exoplayer_seekbar_progress"
                    android:thumbTint="#ff03c8b4" />

                <TextView
                    android:id="@*com.whatsapp:id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="30.0dip"
                    android:paddingStart="4.0dip"
                    android:paddingTop="30.0dip"
                    android:shadowColor="@*com.whatsapp:color/media_view_action_bar_background"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="5.0"
                    android:textColor="@android:color/white"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>