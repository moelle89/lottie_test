<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@*android:color/background_material_dark"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@*com.whatsapp:layout/google_drive_error_view" />

    <ScrollView
        android:id="@*com.whatsapp:id/scrollbars"
        android:clipChildren="false"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:fillViewport="true"
        android:layout_weight="1.0"
        android:fadeScrollbars="false">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="0.0dip"
            android:paddingBottom="@*com.whatsapp:dimen/card_v_padding"
            android:clipChildren="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/accent"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:id="@*com.whatsapp:id/settings_gdrive_backup_now_category_title"
                android:paddingLeft="@*com.whatsapp:dimen/gdrive_drawable_padding_left"
                android:paddingTop="8.0dip"
                android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.0dip"
                android:text="@*com.whatsapp:string/settings_gdrive_backup_now_category_title"
                android:drawableLeft="@*com.whatsapp:drawable/ic_backup_small"
                android:drawablePadding="@*com.whatsapp:dimen/gdrive_drawable_padding_with_text"
                android:drawableTint="@*com.whatsapp:color/accent"
                android:fontFamily="sans-serif-medium" />

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="#FFFFFF"
                android:id="@*com.whatsapp:id/gdrive_new_user_setup_message"
                android:paddingTop="0.0dip"
                android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@*com.whatsapp:dimen/gdrive_view_left_padding"
                android:layout_marginTop="14.0dip"
                android:layout_marginBottom="8.0dip"
                android:text="@*com.whatsapp:string/gdrive_new_user_setup_message_media_and_messages"
                android:fontFamily="sans-serif" />

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="#FFFFFF"
                android:id="@*com.whatsapp:id/gdrive_new_user_setup_select_frequency_message"
                android:paddingTop="0.0dip"
                android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@*com.whatsapp:dimen/gdrive_view_left_padding"
                android:layout_marginTop="14.0dip"
                android:layout_marginBottom="8.0dip"
                android:text="@*com.whatsapp:string/gdrive_new_user_setup_select_a_backup_frequency"
                android:fontFamily="sans-serif" />

            <RadioGroup
                android:textColor="#FFFFFF"
                android:orientation="vertical"
                android:id="@*com.whatsapp:id/gdrive_new_user_setup_freq_options"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@*com.whatsapp:dimen/gdrive_view_left_padding"
                android:layout_marginTop="4.0dip"
                android:layout_marginBottom="20.0dip"
                android:fontFamily="sans-serif" />

            <android.support.v7.widget.AppCompatSpinner
                android:layout_gravity="left"
                android:id="@*com.whatsapp:id/gdrive_new_user_setup_freq_options_spinner"
                android:paddingLeft="0.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginRight="40.0dip"
                android:layout_marginBottom="20.0dip" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@*com.whatsapp:id/settings_gdrive_backup_info_box"
                android:clipChildren="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@*com.whatsapp:dimen/gdrive_view_left_padding"
                android:layout_marginTop="4.0dip">

                <LinearLayout
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.0dip">

                    <com.whatsapp.WaTextView
                        android:textSize="13.0sp"
                        android:id="@*com.whatsapp:id/local_backup_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.whatsapp.WaTextView
                        android:textSize="13.0sp"
                        android:id="@*com.whatsapp:id/gdrive_backup_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.whatsapp.WaTextView
                        android:textSize="13.0sp"
                        android:id="@*com.whatsapp:id/gdrive_backup_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <com.whatsapp.WaTextView
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center|left"
                    android:id="@*com.whatsapp:id/gdrive_backup_general_info"
                    android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.25"
                    android:fontFamily="sans-serif" />

                <LinearLayout
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="16.0dip">

                    <com.whatsapp.WaButton
                        android:textSize="14.0sp"
                        android:textColor="@*com.whatsapp:color/selector_google_drive_green_button_text"
                        android:layout_gravity="left"
                        android:id="@*com.whatsapp:id/google_drive_backup_now_btn"
                        android:background="@*com.whatsapp:drawable/btn_green_small"
                        android:paddingLeft="@*com.whatsapp:dimen/horizontal_padding"
                        android:paddingRight="@*com.whatsapp:dimen/horizontal_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dip"
                        android:layout_marginBottom="0.0dip"
                        android:minWidth="@*com.whatsapp:dimen/btn_min_width"
                        android:text="@*com.whatsapp:string/backup"
                        android:textAllCaps="true" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:layout_gravity="center_vertical"
                            android:id="@*com.whatsapp:id/google_drive_progress"
                            android:visibility="gone"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:progressTint="@*com.whatsapp:color/media_message_progress_determinate"
                            android:indeterminateTint="@*com.whatsapp:color/media_message_progress_determinate"
                            android:indeterminateTintMode="src_atop"
                            style="?android:progressBarStyleHorizontal" />

                        <com.whatsapp.WaImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@*com.whatsapp:id/cancel_download"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:visibility="gone"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip"
                            android:src="@*com.whatsapp:drawable/ic_backup_cancel"
                            android:scaleType="center" />

                        <com.whatsapp.WaImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@*com.whatsapp:id/resume_download"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:paddingLeft="12.0dip"
                            android:paddingTop="12.0dip"
                            android:paddingRight="12.0dip"
                            android:paddingBottom="12.0dip"
                            android:visibility="gone"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip"
                            android:src="@*com.whatsapp:drawable/ic_action_refresh"
                            android:scaleType="centerInside"
                            android:tint="@*com.whatsapp:color/dark_gray" />
                    </LinearLayout>

                    <com.whatsapp.WaTextView
                        android:textColor="#FFFFFF"
                        android:layout_gravity="top"
                        android:id="@*com.whatsapp:id/google_drive_backup_now_btn_info"
                        android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <com.whatsapp.WaTextView
                android:textSize="14.0sp"
                android:textColor="@*com.whatsapp:color/accent"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:id="@*com.whatsapp:id/settings_gdrive_gdrive_category_title"
                android:paddingLeft="@*com.whatsapp:dimen/gdrive_drawable_padding_left"
                android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/settings_gdrive_category_title"
                android:drawableLeft="@*com.whatsapp:drawable/ic_drive"
                android:drawablePadding="@*com.whatsapp:dimen/gdrive_drawable_padding_with_text"
                android:drawableTint="@*com.whatsapp:color/accent"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@*com.whatsapp:dimen/gdrive_view_left_padding">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@*com.whatsapp:id/settings_gdrive_change_frequency_view"
                    android:background="?android:selectableItemBackground"
                    android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:minHeight="52.0dip">

                    <com.whatsapp.WaTextView
                        android:textSize="16.0sp"
                        android:textColor="#FFFFFF"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@*com.whatsapp:string/settings_gdrive_backup_options_title" />

                    <com.whatsapp.WaTextView
                        android:textSize="14.0sp"
                        android:textColor="#b3FFFFFF"
                        android:id="@*com.whatsapp:id/settings_gdrive_backup_options_summary"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@*com.whatsapp:id/settings_gdrive_change_account_view"
                    android:background="?android:selectableItemBackground"
                    android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="52.0dip"
                        android:layout_weight="1.0">

                        <com.whatsapp.WaTextView
                            android:textSize="16.0sp"
                            android:textColor="@*com.whatsapp:color/selector_google_drive"
                            android:id="@*com.whatsapp:id/settings_gdrive_change_account_title"
                            android:duplicateParentState="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@*com.whatsapp:string/settings_gdrive_account_name" />

                        <com.whatsapp.WaTextView
                            android:textSize="14.0sp"
                            android:textColor="#b3FFFFFF"
                            android:gravity="center_vertical"
                            android:layout_gravity="left"
                            android:id="@*com.whatsapp:id/settings_gdrive_account_name_summary"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <com.whatsapp.WaImageView
                        android:layout_gravity="center"
                        android:id="@*com.whatsapp:id/backup_settings_icon"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@*com.whatsapp:drawable/ic_backup_settings" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@*com.whatsapp:id/settings_gdrive_network_settings_view"
                    android:background="?android:selectableItemBackground"
                    android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:minHeight="52.0dip">

                    <com.whatsapp.WaTextView
                        android:textSize="16.0sp"
                        android:textColor="@*com.whatsapp:color/selector_google_drive"
                        android:duplicateParentState="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@*com.whatsapp:string/settings_gdrive_network_settings_title" />

                    <com.whatsapp.WaTextView
                        android:textSize="14.0sp"
                        android:textColor="#b3FFFFFF"
                        android:id="@*com.whatsapp:id/settings_gdrive_network_settings_summary"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@*com.whatsapp:id/settings_gdrive_backup_optional_media"
                    android:background="?android:selectableItemBackground"
                    android:paddingRight="26.0dip"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="52.0dip"
                        android:layout_weight="1.0">

                        <com.whatsapp.WaTextView
                            android:textSize="16.0sp"
                            android:textColor="@*com.whatsapp:color/selector_google_drive"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@*com.whatsapp:string/settings_gdrive_include_videos_settings_title" />

                        <com.whatsapp.WaTextView
                            android:textSize="14.0sp"
                            android:textColor="#b3FFFFFF"
                            android:gravity="center_vertical"
                            android:layout_gravity="left"
                            android:id="@*com.whatsapp:id/include_video_settings_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@*com.whatsapp:id/include_video_setting"
                        android:background="?android:selectableItemBackground"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="0.0dip" />
                </LinearLayout>

                <com.whatsapp.WaTextView
                    android:textSize="13.0sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:id="@*com.whatsapp:id/gdrive_new_user_setup_footer_info"
                    android:paddingRight="@*com.whatsapp:dimen/card_h_padding2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="@*com.whatsapp:string/gdrive_new_user_setup_footer_info"
                    android:lineSpacingMultiplier="1.15"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.whatsapp.WaButton
        android:textSize="16.0sp"
        android:textColor="@*com.whatsapp:color/accent"
        android:gravity="center"
        android:layout_gravity="center|right"
        android:id="@*com.whatsapp:id/gdrive_new_user_setup_btn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="@*com.whatsapp:dimen/horizontal_padding"
        android:layout_marginBottom="4.0dip"
        android:minWidth="@*com.whatsapp:dimen/btn_min_width"
        android:text="@*com.whatsapp:string/done"
        android:drawableRight="@*com.whatsapp:drawable/chevron"
        android:drawablePadding="5.0dip"
        android:textAllCaps="true"
        style="@*com.whatsapp:style/Widget.AppCompat.Button.Borderless.Colored" />
</LinearLayout>