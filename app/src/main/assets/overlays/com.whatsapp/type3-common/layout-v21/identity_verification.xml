<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatsapp="http://schemas.android.com/apk/com.whatsapp">

    <com.whatsapp.qrcode.QrScannerView
        android:layout_gravity="center"
        android:id="@*com.whatsapp:id/camera"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.whatsapp.qrcode.QrScannerOverlay
        android:layout_gravity="center"
        android:id="@*com.whatsapp:id/overlay"
        android:paddingBottom="@*com.whatsapp:dimen/actionbar_height"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        whatsapp:qsoShape="round" />

    <com.whatsapp.WaTextView
        android:textColor="@*com.whatsapp:color/white"
        android:gravity="center"
        android:id="@*com.whatsapp:id/error_indicator"
        android:background="#ffef6c00"
        android:padding="8.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:id="@*com.whatsapp:id/main_layout"
            android:background="@*com.whatsapp:color/gray_activity"
            android:paddingBottom="@*com.whatsapp:dimen/actionbar_height"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="16.0dip"
                android:paddingTop="20.0dip"
                android:paddingRight="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_gravity="center_horizontal"
                    android:id="@*com.whatsapp:id/qr_code_group"
                    android:padding="16.0dip"
                    android:clipToPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <view
                        android:layout_gravity="center_horizontal"
                        android:id="@*com.whatsapp:id/qr_code"
                        android:background="@*com.whatsapp:drawable/white_circle"
                        android:padding="48.0dip"
                        android:layout_width="220.0dip"
                        android:layout_height="220.0dip"
                        class="com.whatsapp.Qrcom.whatsapp.WaImageView" />

                    <com.whatsapp.WaImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@*com.whatsapp:id/result"
                        android:padding="48.0dip"
                        android:layout_width="212.0dip"
                        android:layout_height="212.0dip"
                        android:layout_marginTop="4.0dip"
                        android:scaleType="center" />
                </FrameLayout>

                <com.whatsapp.WaTextView
                    android:textSize="16.0sp"
                    android:gravity="center"
                    android:id="@*com.whatsapp:id/identity_text"
                    android:paddingTop="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <com.whatsapp.TextEmojiLabel
                    android:textSize="16.0sp"
                    android:gravity="center"
                    android:id="@*com.whatsapp:id/verify_identity_tip"
                    android:paddingTop="24.0dip"
                    android:paddingBottom="24.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@*com.whatsapp:string/verify_identity_tip"
                    style="@*com.whatsapp:style/Text.Field" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:id="@*com.whatsapp:id/header"
            android:background="@*android:color/background_material_dark"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="@*com.whatsapp:dimen/actionbar_height"
            android:elevation="2.0dip">

            <com.whatsapp.WaImageView
                android:layout_gravity="center_vertical"
                android:id="@*com.whatsapp:id/close"
                android:paddingLeft="6.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@*com.whatsapp:drawable/ic_close"
                android:tint="#FFFFFF"/>

            <com.whatsapp.WaTextView
                android:textSize="12.0sp"
                android:layout_gravity="center"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/verify_identity_notification_suggest_enable"
                android:layout_weight="1.0"
                style="@*com.whatsapp:style/Text.Field" />

            <Button
                android:layout_gravity="center|right"
                android:id="@*com.whatsapp:id/enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*com.whatsapp:string/verify_identity_notification_enable"
                style="@*com.whatsapp:style/Widget.AppCompat.Button.Borderless.Colored" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@*com.whatsapp:id/footer"
        android:background="@*android:color/background_material_dark"
        android:layout_width="fill_parent"
        android:layout_height="@*com.whatsapp:dimen/actionbar_height">

        <com.whatsapp.WaTextView
            android:textSize="16.0sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@*com.whatsapp:id/verify_identity_qr_tip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/verify_identity_qr_tip"
            style="@*com.whatsapp:style/Text.Field" />

        <Button
            android:layout_gravity="center|right"
            android:id="@*com.whatsapp:id/scan_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@*com.whatsapp:string/scan_code"
            style="@*com.whatsapp:style/Widget.AppCompat.Button.Borderless.Colored" />
    </FrameLayout>
</FrameLayout>