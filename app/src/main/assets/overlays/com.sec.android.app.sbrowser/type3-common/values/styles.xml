<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppBaseTheme.Light" parent="@*android:style/Theme.Material">
		<item name="android:windowLightStatusBar">false</item>
	</style>
	<style name="SettingsTitleTextStyle" parent="@*android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">18.5sp</item>
        <item name="android:textColor">@*android:color/accent_material_dark</item>
    </style>
	<style name="SettingsThemeForDialogBase" parent="@*android:style/Theme.Material.Dialog.MinWidth" />
	<style name="HelpIntroTheme" parent="@*android:style/Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorControlActivated">@*com.sec.android.app.sbrowser:color/color_control_activated</item>
        <item name="android:colorPrimary">@*com.sec.android.app.sbrowser:color/color_primary</item>
        <item name="android:colorPrimaryDark">@*com.sec.android.app.sbrowser:color/color_primary_dark</item>
        <item name="android:statusBarColor">@*com.sec.android.app.sbrowser:color/toolbar_statusbar_color</item>
    </style>
	<style name="SBrowserActionModeStyle" parent="@*android:style/Widget.Material.ActionMode">
        <item name="android:background">@*com.sec.android.app.sbrowser:color/toolbar_bg_color</item>
        <item name="android:height">56.0dp</item>
    </style>
	<style name="toolbarSwipeTheme" parent="@*android:style/Theme.DeviceDefault" />
	<style name="SBrowserTitleTextStyle" parent="@*android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">18.5sp</item>
        <item name="android:textColor">@*android:color/accent_material_dark</item>
    </style>
