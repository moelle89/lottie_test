<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeBlack" parent="@*flar2.exkernelmanager:style/AppTheme.Base.Black">
        <item name="android:seekBarStyle">@*flar2.exkernelmanager:style/SeekBarBlueAppTheme</item>
		<item name="android:colorControlNormal">@*android:color/white</item>
        <item name="android:windowContentTransitions">true</item>        
		<item name="android:windowBackground">@*android:color/black</item>	
		<item name="android:colorPrimary">@*android:color/black</item>		
		<item name="android:colorBackground">@*android:color/black</item>
        <item name="android:statusBarColor">@*android:color/black</item>
        <item name="android:navigationBarColor">@*android:color/black</item>
        <item name="android:colorControlHighlight">@*flar2.exkernelmanager:color/highlight</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="*flar2.exkernelmanager:windowActionBar">false</item>
        <item name="*flar2.exkernelmanager:windowNoTitle">true</item>
    </style>
    <style name="AppThemeLight" parent="@*flar2.exkernelmanager:style/AppTheme.Base.Light">
        <item name="android:seekBarStyle">@*flar2.exkernelmanager:style/SeekBarBlueAppTheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorControlHighlight">@*flar2.exkernelmanager:color/highlight</item>        
		<item name="android:colorPrimary">@*android:color/suggestion_highlight_text</item>		
		<item name="android:colorPrimaryDark">@*android:color/suggestion_highlight_text</item>
		<item name="android:windowBackground">@*android:color/white</item>		
		<item name="android:colorBackground">@*android:color/white</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="*flar2.exkernelmanager:windowActionBar">false</item>
        <item name="*flar2.exkernelmanager:windowNoTitle">true</item>
		<item name="android:navigationBarColor">@*android:color/secondary_text_default_material_dark</item>
    </style>
    <style name="AppTheme" parent="@*flar2.exkernelmanager:style/AppTheme.Base">
        <item name="android:seekBarStyle">@*flar2.exkernelmanager:style/SeekBarBlueAppTheme</item>
		<item name="android:colorPrimary">@*android:color/background_dark</item>	
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorControlHighlight">@*flar2.exkernelmanager:color/highlight</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="*flar2.exkernelmanager:windowActionBar">false</item>
        <item name="*flar2.exkernelmanager:windowNoTitle">true</item>
    </style>
</resources>
