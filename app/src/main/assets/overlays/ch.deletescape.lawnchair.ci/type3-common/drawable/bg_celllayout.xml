<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_active="true">
	  <layer-list>
		<!-- Drop Shadow Stack -->
		<item>
			<shape>
				<padding
					android:bottom="1dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />

				<solid android:color="#00ffffff" />

				<corners android:radius="16.0dip" />
			</shape>
		</item>
		<item>
			<shape>
				<padding
					android:bottom="1dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />

				<solid android:color="#10ffffff" />

				<corners android:radius="16.0dip" />
			</shape>
		</item>
		<item>
			<shape>
				<padding
					android:bottom="1dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />

				<solid android:color="#20ffffff" />

				<corners android:radius="16.0dip" />
			</shape>
		</item>
		<item>
			<shape android:shape="rectangle">
				<stroke android:width="@*ch.deletescape.lawnchair.ci:dimen/spring_loaded_panel_border" android:color="@*ch.deletescape.lawnchair.ci:color/spring_loaded_highlighted_panel_border_color" />
				<solid android:color="@*ch.deletescape.lawnchair.ci:color/spring_loaded_highlighted_panel_border_color" />
				<corners android:radius="16.0dip" />
			</shape>
    </item>
	</layer-list>
	</item>
	<item>
	  <layer-list>
		<!-- Drop Shadow Stack -->
		<item>
			<shape android:tint="?allAppsScrimColor">
				<padding
					android:bottom="1dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />

				<solid android:color="#00000000" />

				<corners android:radius="16.0dip" />
			</shape>
		</item>
		<item>
			<shape android:tint="?allAppsScrimColor">
				<padding
					android:bottom="1dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />

				<solid android:color="#10000000" />

				<corners android:radius="16.0dip" />
			</shape>
		</item>
		<item>
			<shape android:tint="?allAppsScrimColor">
				<padding
					android:bottom="1dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />

				<solid android:color="#20000000" />

				<corners android:radius="16.0dip" />
			</shape>
		</item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@*ch.deletescape.lawnchair.ci:color/spring_loaded_panel_color" />
			<corners android:radius="16.0dip" />
        </shape>
    </item>
	</layer-list>
	</item>
</selector>