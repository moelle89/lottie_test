<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AllAppsNavBarProtection">
        <item name="android:background">@*ch.deletescape.lawnchair.ci:drawable/notification_bg_low_normal</item>
		<item name="android:backgroundTint">@null</item>
    </style>
    <style name="SettingsTheme" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:actionBarTheme">@*ch.deletescape.lawnchair.ci:style/SettingsTheme.ActionBar</item>
        <item name="android:colorPrimary">@*android:color/user_icon_default_white</item>
        <item name="android:colorPrimaryDark">@*android:color/user_icon_default_white</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="android:statusBarColor">@*android:color/user_icon_default_white</item>
    </style>

    <style name="BaseLauncherTheme" parent="@*android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
    </style>

    <style name="BaseLauncherThemeWithCustomAttrs" parent="@*ch.deletescape.lawnchair.ci:style/BaseLauncherTheme">
        <item name="android:textColorPrimary">@*ch.deletescape.lawnchair.ci:color/primary_text_material_light</item>
        <item name="android:textColorSecondary">@*ch.deletescape.lawnchair.ci:color/secondary_text_material_light</item>
        <item name="android:textColorPrimaryInverse">?android:textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">?android:textColorSecondary</item>
        <item name="android:colorPrimary">@*ch.deletescape.lawnchair.ci:color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@*ch.deletescape.lawnchair.ci:color/colorPrimaryDark</item>
        <item name="android:colorAccent">@*ch.deletescape.lawnchair.ci:color/colorAccent</item>
        <item name="*ch.deletescape.lawnchair.ci:allAppsScrimColor">#64000000</item>
        <item name="*ch.deletescape.lawnchair.ci:allAppsNavBarScrimColor">@*android:color/shadow</item>
        <item name="*ch.deletescape.lawnchair.ci:popupColorPrimary">@*android:color/dim_foreground_light</item>
        <item name="*ch.deletescape.lawnchair.ci:popupColorSecondary">@*android:color/dim_foreground_light</item>
        <item name="*ch.deletescape.lawnchair.ci:popupColorTertiary">@*android:color/button_material_dark</item>
        <item name="*ch.deletescape.lawnchair.ci:isMainColorDark">true</item>
        <item name="*ch.deletescape.lawnchair.ci:isWorkspaceDarkText">false</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceTextColor">@*android:color/white</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceShadowColor">@*android:color/transparent</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceAmbientShadowColor">@*android:color/shadow</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceKeyShadowColor">@*android:color/transparent</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceStatusBarScrim">@*ch.deletescape.lawnchair.ci:drawable/workspace_bg</item>
        <item name="*ch.deletescape.lawnchair.ci:widgetsTheme">@*ch.deletescape.lawnchair.ci:style/WidgetContainerTheme</item>
    </style>
	
    <style name="LauncherThemeDarkText" parent="@*ch.deletescape.lawnchair.ci:style/LauncherTheme">
        <item name="*ch.deletescape.lawnchair.ci:isWorkspaceDarkText">false</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceTextColor">#ffffffff</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceShadowColor">@*android:color/transparent</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceAmbientShadowColor">@*android:color/transparent</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceKeyShadowColor">@*android:color/transparent</item>
        <item name="*ch.deletescape.lawnchair.ci:workspaceStatusBarScrim">@null</item>
    </style>
    <style name="LauncherThemeDark" parent="@*ch.deletescape.lawnchair.ci:style/LauncherTheme">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffffffff</item>
        <item name="android:textColorHint">@*android:color/secondary_text_default_material_dark</item>
        <item name="android:textColorTertiary">@*android:color/lighter_gray</item>
        <item name="android:colorControlHighlight">@*android:color/accent_material_dark</item>
        <item name="android:colorPrimary">@*android:color/background_dark</item>
        <item name="*ch.deletescape.lawnchair.ci:allAppsScrimColor">#64000000</item>
        <item name="*ch.deletescape.lawnchair.ci:allAppsNavBarScrimColor">@*android:color/shadow</item>
        <item name="*ch.deletescape.lawnchair.ci:popupColorPrimary">@*android:color/dim_foreground_light</item>
        <item name="*ch.deletescape.lawnchair.ci:popupColorSecondary">@*android:color/dim_foreground_light</item>
        <item name="*ch.deletescape.lawnchair.ci:popupColorTertiary">@*android:color/button_material_dark</item>
        <item name="*ch.deletescape.lawnchair.ci:isMainColorDark">true</item>
        <item name="*ch.deletescape.lawnchair.ci:widgetsTheme">@*ch.deletescape.lawnchair.ci:style/WidgetContainerTheme.Dark</item>
    </style>
	
    <style name="WidgetContainerTheme" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:textColorPrimary">@*android:color/white</item>        
		<item name="android:backgroundTint">@*android:color/secondary_text_default_material_light</item>
        <item name="android:textColorSecondary">@*android:color/lighter_gray</item>
        <item name="android:colorEdgeEffect">@*android:color/holo_button_pressed</item>
    </style>
	
    <style name="AllAppsEmptySearchBackground">
        <item name="android:colorForeground">@*ch.deletescape.lawnchair.ci:color/all_apps_bg_hand_fill</item>
        <item name="android:colorControlHighlight">#ffffffff</item>
        <item name="android:colorPrimary">@*android:color/background_dark</item>
    </style>
    <style name="AllAppsEmptySearchBackground.Dark" parent="@*ch.deletescape.lawnchair.ci:style/AllAppsEmptySearchBackground">
        <item name="android:colorForeground">@*ch.deletescape.lawnchair.ci:color/all_apps_bg_hand_fill_dark</item>
        <item name="android:colorControlHighlight">#ffffffff</item>
        <item name="android:colorPrimary">@*android:color/background_dark</item>
    </style>
</resources>