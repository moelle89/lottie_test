<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.V21.AppCompat" parent="@android:style/Theme.Material.NoActionBar">
		<item name="android:colorAccent">@*android:color/accent_material_dark</item>
		<item name="android:textColorHintInverse">@*android:color/holo_orange_light</item>
		<item name="android:textColorHint">@*android:color/holo_orange_light</item>
        <item name="android:colorControlActivated">@*android:color/accent_material_dark</item>
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:statusBarColor">@*android:color/background_dark</item>
		<item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:buttonBarStyle">?*android:buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?*android:buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>

    <style name="Platform.V21.AppCompat.Light" parent="@android:style/Theme.Material.NoActionBar">
		<item name="android:colorAccent">@*android:color/accent_material_dark</item>
		<item name="android:textColorHintInverse">@*android:color/holo_orange_light</item>
		<item name="android:textColorHint">@*android:color/holo_orange_light</item>
        <item name="android:colorControlActivated">@*android:color/accent_material_dark</item>
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:statusBarColor">@*android:color/background_dark</item>
		<item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:buttonBarStyle">?*android:buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?*android:buttonBarButtonStyle</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>
</resources>
