<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@*android:color/timepicker_default_background_material" />
        </shape>
    </item>
   <item>
        <shape android:tint="#17B3D1E3" >
            <gradient
                android:startColor="#B1000000"
                android:endColor="#53000000"
                android:angle="90" />
        </shape>
    </item>
   <item>
        <shape android:shape="rectangle" android:tint="@*android:color/facelock_spotlight_mask">
            <gradient android:startColor="@*android:color/facelock_spotlight_mask" android:endColor="#A4000000" android:angle="90.0" android:type="linear" />
        </shape>
    </item>
   <item>
        <shape android:shape="rectangle" android:tint="@*android:color/timepicker_default_background_material">
            <gradient android:endColor="@*android:color/facelock_spotlight_mask"  android:startColor="@*android:color/transparent" android:angle="45.0" />
        </shape>
    </item>
   <item>
        <shape android:shape="rectangle">
            <gradient android:endColor="@*android:color/background_dark" android:startColor="#23000000" android:angle="-90.0" />
        </shape>
    </item>
</layer-list>