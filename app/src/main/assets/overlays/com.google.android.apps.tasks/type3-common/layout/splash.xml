<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@*com.google.android.apps.tasks:id/splash_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@*android:color/background_dark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@*com.google.android.apps.tasks:dimen/splash_logo_vertical_offcenter"
        android:src="@*com.google.android.apps.tasks:drawable/product_logo_tasks_color_144" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@*com.google.android.apps.tasks:dimen/splash_google_bottom_spacing"
        android:alpha="0.3"
        android:src="@*com.google.android.apps.tasks:drawable/googlelogo_dark_color_120x44" />
</FrameLayout>