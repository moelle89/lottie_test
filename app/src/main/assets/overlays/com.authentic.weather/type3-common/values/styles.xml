<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Design.NavigationView" parent="">
        <item name="android:background">@*android:color/background_dark</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:maxWidth">@*com.authentic.weather:dimen/design_navigation_max_width</item>
        <item name="*com.authentic.weather:elevation">@*com.authentic.weather:dimen/design_navigation_elevation</item>
    </style>
    <style name="AppTheme" parent="@*com.authentic.weather:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@*com.authentic.weather:drawable/bg_weather_hot</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
		<item name="android:fitsSystemWindows">true</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
        <item name="*com.authentic.weather:windowActionBar">false</item>
        <item name="*com.authentic.weather:windowNoTitle">true</item>
        <item name="*com.authentic.weather:colorPrimary">@android:color/white</item>
        <item name="*com.authentic.weather:colorPrimaryDark">@*android:color/background_dark</item>
        <item name="*com.authentic.weather:colorAccent">#ff0101ff</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar" parent="@*com.authentic.weather:style/Theme.AppCompat.Light">
        <item name="*com.authentic.weather:windowActionBar">false</item>
        <item name="*com.authentic.weather:windowNoTitle">true</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
    <style name="Theme.AppCompat.NoActionBar" parent="@*com.authentic.weather:style/Theme.AppCompat">
        <item name="*com.authentic.weather:windowActionBar">false</item>
        <item name="*com.authentic.weather:windowNoTitle">true</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
    <style name="Theme.Design.Light.NoActionBar" parent="@*com.authentic.weather:style/Theme.Design.Light">
        <item name="*com.authentic.weather:windowActionBar">false</item>
        <item name="*com.authentic.weather:windowNoTitle">true</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
    <style name="Theme.Design.NoActionBar" parent="@*com.authentic.weather:style/Theme.Design">
        <item name="*com.authentic.weather:windowActionBar">false</item>
        <item name="*com.authentic.weather:windowNoTitle">true</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
    <style name="Theme.Design" parent="@*com.authentic.weather:style/Theme.AppCompat">
        <item name="*com.authentic.weather:textColorError">@*com.authentic.weather:color/design_textinput_error_color_dark</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
</resources>
