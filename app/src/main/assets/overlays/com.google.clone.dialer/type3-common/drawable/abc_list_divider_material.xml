<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="0sp" android:bottom="1sp">
		<shape>
			<solid android:color="@*android:color/background_dark" />
		</shape> 
	</item>
    <item android:top="0sp" android:bottom="1sp">
		<shape android:tint="@*android:color/timepicker_default_background_material" >
			<gradient
					android:startColor="#96B3D1E3"
					android:endColor="#00000000"
					android:angle="90" />	 
		</shape> 
	</item>
    <item android:gravity="bottom" android:height="1.5dip">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/timepicker_default_background_material" />
        </shape>
    </item>
</layer-list>