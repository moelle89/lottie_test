<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBar" parent="@*android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">?*android:dividerVertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">0.0dip</item>
    </style>
    <style name="ButtonBarButton" parent="@*android:style/Widget.Holo.Button">
        <item name="android:background">?*android:selectableItemBackground</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingStart">4.0dip</item>
        <item name="android:paddingEnd">4.0dip</item>
    </style>
    <style name="ContextualSearchCaptionTextView">
        <item name="android:textAppearance">@*com.chrome.beta:style/BlackBody</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@*android:color/primary_text_leanback_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">7.0dip</item>
        <item name="android:layout_marginEnd">7.0dip</item>
    </style>
    <style name="ContextualSearchTextViewLayout">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@*android:color/primary_text_leanback_light</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">53.0dip</item>
        <item name="android:paddingEnd">53.0dip</item>
    </style>
    <style name="FullscreenWhiteBase" parent="@*com.chrome.beta:style/Theme.AppCompat">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:textColorLink">@*com.chrome.beta:color/light_active_color</item>
        <item name="*com.chrome.beta:colorAccent">@*com.chrome.beta:color/light_active_color</item>
        <item name="*com.chrome.beta:colorPrimary">@*com.chrome.beta:color/light_active_color</item>
        <item name="*com.chrome.beta:colorPrimaryDark">@*android:color/primary_text_leanback_light</item>
        <item name="*com.chrome.beta:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>
    <style name="SearchActivityTheme" parent="@*com.chrome.beta:style/MainTheme">
        <item name="android:windowBackground">@*android:color/primary_text_leanback_light</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>
    <style name="WebNotificationButton" parent="@*android:style/Widget.DeviceDefault.Button.Borderless.Small">
        <item name="android:textAppearance">@*com.chrome.beta:style/TextAppearance.WebNotificationButton</item>
        <item name="android:background">@*com.chrome.beta:drawable/web_notification_button_background</item>
    </style>
</resources>
