<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <stroke android:width="2.0px" android:color="#7DCDDBE0" />
			<corners android:radius="14.0dip" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="bottom|center" android:clipOrientation="vertical">
            <shape>
                <stroke android:width="6.0dip" android:color="#00000000" />
				<corners android:radius="14.0dip" />
				<gradient android:startColor="#CFCDDBE0" android:endColor="@*android:color/accent_material_dark" />
            </shape>
        </clip>
    </item>
</layer-list>