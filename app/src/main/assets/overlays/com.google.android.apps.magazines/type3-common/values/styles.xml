<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NSTheme.Light.CustomToolbar" parent="@*com.google.android.apps.magazines:style/NSTheme.Dark">
		<item name="android:windowLightStatusBar">false</item>
        <item name="*com.google.android.apps.magazines:windowActionBar">false</item>
        <item name="*com.google.android.apps.magazines:windowNoTitle">true</item>
    </style>
    <style name="NSTheme.SplashScreen" parent="@*com.google.android.apps.magazines:style/NSTheme.Light.CustomToolbar">
        <item name="android:windowBackground">@*com.google.android.apps.magazines:drawable/quantum_launchscreen_google_news</item>
		<item name="android:backgroundTint">@null</item>
    </style>
	<style name="BottomBar">
		<item name="android:background">@*com.google.android.apps.magazines:drawable/abc_list_divider_material</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BottomBarButton">
        <item name="android:textAppearance">@*com.google.android.apps.magazines:style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textSize">@*com.google.android.apps.magazines:dimen/bottom_bar_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@*com.google.android.apps.magazines:drawable/abc_list_divider_material</item>
        <item name="android:paddingTop">@*com.google.android.apps.magazines:dimen/card_inner_content_half_padding</item>
        <item name="android:paddingBottom">@*com.google.android.apps.magazines:dimen/card_inner_content_quarter_padding</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">@*com.google.android.apps.magazines:dimen/bottom_bar_button_height</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:animateLayoutChanges">false</item>
        <item name="*com.google.android.apps.magazines:maxWidth">168.0dip</item>
    </style>
	
    <style name="CardArticleItemTile" parent="@*com.google.android.apps.magazines:style/NSCardView.NoCard">
		<item name="android:backgroundTint">@null</item>
		<item name="android:background">@*android:color/accent_material_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingStart">@*com.google.android.apps.magazines:dimen/card_inner_content_three_halves_padding</item>
        <item name="android:paddingEnd">@*com.google.android.apps.magazines:dimen/card_inner_content_three_halves_padding</item>
        <item name="*com.google.android.apps.magazines:bindOnClickListener">@*com.google.android.apps.magazines:id/CardArticleItem_articleOnClickListener</item>
        <item name="*com.google.android.apps.magazines:bindPaddingBottomResId">@*com.google.android.apps.magazines:id/CardStoryNewscastCarousel_optTileBottomPaddingResId</item>
        <item name="*com.google.android.apps.magazines:bindOnCardSeenListener">@*com.google.android.apps.magazines:id/CardArticleItem_onCardSeenListener</item>
    </style>
	
    <style name="CardArticleItemTile.Light" parent="@*com.google.android.apps.magazines:style/CardArticleItemTile">
		<item name="android:backgroundTint">@null</item>
        <item name="android:background">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.apps.magazines:cardBackgroundColor">@*com.google.android.apps.magazines:color/card_background</item>
    </style>

</resources>
