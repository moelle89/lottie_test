<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayClusterTitle" parent="@*com.google.android.apps.magazines:style/PlayMediumPlainText">
        <item name="android:textSize">@*com.google.android.apps.magazines:dimen/play_cluster_header_title_size</item>
        <item name="android:textColor">@*android:color/accent_material_dark</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShelfHeaderTitle" parent="@*com.google.android.apps.magazines:style/PlayClusterTitle">
        <item name="android:textSize">@*com.google.android.apps.magazines:dimen/shelf_header_title</item>
        <item name="android:textColor">@*android:color/holo_orange_light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">7</item>
        <item name="android:singleLine">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textDirection">locale</item>
        <item name="*com.google.android.apps.magazines:bindText">@*com.google.android.apps.magazines:id/ShelfHeader_title</item>
    </style>
</resources>
