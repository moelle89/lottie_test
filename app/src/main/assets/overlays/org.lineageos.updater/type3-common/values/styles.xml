<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@*org.lineageos.updater:style/Theme.AppCompat">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="*org.lineageos.updater:colorAccent">@*org.lineageos.updater:color/theme_accent</item>
        <item name="*org.lineageos.updater:colorPrimary">@*android:color/timepicker_default_background_material</item>
        <item name="*org.lineageos.updater:colorPrimaryDark">@*android:color/timepicker_default_background_material</item>
        <item name="*org.lineageos.updater:windowActionModeOverlay">true</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@*org.lineageos.updater:style/AppTheme">
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="*org.lineageos.updater:windowActionBar">false</item>
        <item name="*org.lineageos.updater:windowNoTitle">true</item>
    </style>
</resources>
