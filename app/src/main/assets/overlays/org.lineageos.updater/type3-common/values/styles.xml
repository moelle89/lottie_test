<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@*org.lineageos.updater:style/Theme.AppCompat">
        <item name="android:windowBackground">@*org.lineageos.updater:color/update_background</item>
        <item name="android:navigationBarColor">@*org.lineageos.updater:color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="*org.lineageos.updater:colorAccent">@*org.lineageos.updater:color/theme_accent</item>
        <item name="*org.lineageos.updater:colorPrimary">@*org.lineageos.updater:color/theme_primary</item>
        <item name="*org.lineageos.updater:colorPrimaryDark">@*org.lineageos.updater:color/theme_primary_dark</item>
        <item name="*org.lineageos.updater:windowActionModeOverlay">true</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@*org.lineageos.updater:style/AppTheme">
        <item name="android:windowBackground">@*org.lineageos.updater:color/update_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@*org.lineageos.updater:color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="*org.lineageos.updater:windowActionBar">false</item>
        <item name="*org.lineageos.updater:windowNoTitle">true</item>
    </style>
</resources>
