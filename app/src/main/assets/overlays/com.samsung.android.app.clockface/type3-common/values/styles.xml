<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransparentTheme" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>		
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.samsung.android.app.clockface:colorPrimary">@*android:color/background_dark</item>
    </style>
    <style name="NoActionBarTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
		<item name="android:backgroundTint">@*android:color/background_dark</item>
        <item name="android:statusBarColor">@*android:color/background_dark</item>
		<item name="android:windowBackground">@*android:color/background_dark</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.samsung.android.app.clockface:colorPrimary">@*android:color/background_dark</item>
    </style>
    <style name="ActionBarTheme" parent="@android:style/Theme.DeviceDefault">
		<item name="android:backgroundTint">@*android:color/background_dark</item>
		<item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:statusBarColor">@*android:color/background_dark</item>        
		<item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.samsung.android.app.clockface:colorPrimary">@*android:color/background_dark</item>
    </style>
</resources>
