<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogWhenLarge" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:textAppearanceMedium">@*com.android.packageinstaller:style/MediumText</item>
        <item name="android:textAppearanceSmall">@*com.android.packageinstaller:style/SmallText</item>
        <item name="android:titleTextStyle">@*com.android.packageinstaller:style/TitleText</item>
        <item name="android:progressTint">@*android:color/accent_material_dark</item>
	    <item name="android:indeterminateTint">@*android:color/accent_material_dark</item>
		<item name="android:progressBackgroundTint">#B91a1c24</item>
        <item name="android:secondaryProgressTint">@*android:color/accent_material_dark</item>
		<item name="android:colorPrimary">@*android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
		<item name="android:statusBarColor">@*android:color/transparent</item>
		<item name="android:colorPrimaryDark">@*android:color/transparent</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:colorBackgroundFloating">@*android:color/dim_foreground_light</item>
		<item name="android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="android:colorControlActivated">@*android:color/accent_material_dark</item>
		<item name="android:colorEdgeEffect">@*android:color/accent_material_dark</item>
		<item name="android:backgroundTint">@*android:color/facelock_spotlight_mask</item>
		<item name="android:windowShowWallpaper">true</item>
		<item name="android:colorControlHighlight">@*android:color/accent_material_dark</item>
    </style>
    <style name="Theme.DialogWhenLarge" parent="@*android:style/Theme.Material.DialogWhenLarge.NoActionBar">
		<item name="android:colorPrimary">@*android:color/background_material_dark</item>
		<item name="android:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
		<item name="android:titleTextStyle">@*android:style/TextAppearance.Material.Large</item>
        <item name="android:textAppearanceMedium">@*android:style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@*android:style/TextAppearance.Small</item>
    </style>
    <style name="GrantPermissions" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="*android:windowFixedHeightMinor">100.0%</item>
        <item name="*android:windowFixedHeightMajor">100.0%</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
		<item name="android:backgroundTint">@*android:color/background_dark</item>
		<item name="android:itemBackground">@*android:color/dim_foreground_light</item>
        <item name="android:colorBackgroundFloating">@*android:color/dim_foreground_light</item>
		<item name="android:colorBackground">@*android:color/dim_foreground_light</item>
    </style>
    <style name="MediumText"
        parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ffffff</item>
    </style>
	<style name="Settings" parent="@android:style/Theme.Material.Settings">
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>
    <style name="SmallText"
        parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="TitleText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="Theme.AlertDialogActivity" parent="@android:style/Theme.DeviceDefault.Light.Panel">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.Header.Settings" parent="@android:style/Theme.Material.Settings">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:contentInsetStart">72dp</item>
        <item name="android:textColor">#ffffff</item>
		<item name="android:background">@*android:color/transparent</item>
    </style>
</resources>