<resources>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material.Wallpaper">
        <item name="android:windowNoTitle">true</item>
		<item name="android:backgroundTint">@*android:color/legacy_primary</item>
		<item name="android:windowBackground">@*android:color/black</item>
        <item name="android:windowActionBar">false</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="Base.Widget.AppCompat.Light.PopupMenu" parent="@android:style/Widget.Material.PopupMenu" >
		<item name="android:backgroundTint">@null</item>
	</style>
    <style name="Base.Widget.AppCompat.Light.PopupMenu.Overflow" parent="@*com.pushbullet.android:style/Base.Widget.AppCompat.Light.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4.0dip</item>
        <item name="android:overlapAnchor">true</item>
		<item name="android:backgroundTint">@null</item>
	</style>
	<style name="Base.Widget.AppCompat.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:backgroundTint">@null</item>
    </style>
	<style name="Platform.Widget.AppCompat.Spinner" parent="@android:style/Widget.Spinner" >
	    <item name="android:tint">#ffffff</item>
		<item name="android:backgroundTint">@null</item>
    </style>
    <style name="Platform.AppCompat.Light.Dialog" parent="@*android:style/Theme.Material.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>
