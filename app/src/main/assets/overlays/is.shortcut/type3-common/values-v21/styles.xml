<?xml version="1.0" encoding="utf-8"?>
<resources>  
    <style name="Platform.AppCompat" parent="@android:style/Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
	<style name="SettingsListItemStyle">
        <item name="android:background">@*android:color/background_dark</item>
        <item name="android:elevation">1.0dip</item>
    </style>
</resources>
