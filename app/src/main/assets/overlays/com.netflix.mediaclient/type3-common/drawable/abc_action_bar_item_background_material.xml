<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
		<shape android:tint="#17B3D1E3" >
			<gradient
					android:startColor="#B1000000"
					android:endColor="#53000000"
					android:angle="-90" />	 
		</shape> 
    </item>
	<item>
		<shape android:shape="rectangle">
            <gradient android:endColor="@*android:color/highlighted_text_dark"  android:startColor="@*android:color/background_dark" android:angle="0.0" />
        </shape>
    </item>
	<item>
		<shape android:shape="rectangle">
            <gradient android:endColor="@*android:color/background_dark" android:startColor="#0BA6CDE4" android:angle="90.0" />
        </shape>
    </item>
    <item android:gravity="bottom" android:height="1.5dip">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/highlighted_text_dark" />
        </shape>
    </item>
</layer-list>