<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_longAnimTime"
    android:exitFadeDuration="@android:integer/config_longAnimTime">
    <item android:state_checked="true">
        <shape android:shape="rectangle" android:useLevel="false" android:tint="?android:attr/colorControlActivated"
            android:visible="true">
			<solid android:color="#40FFFFFF" />
            <corners android:radius="25.0dip" />
            <size android:width="21.0dip" android:height="21.0dip" />
            <stroke android:width="1.2dp" android:color="?android:attr/colorControlActivated" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle" android:useLevel="false"
            android:visible="true">
			<solid android:color="#00151515" />
            <corners android:radius="25.0dip" />
            <size android:width="21.0dip" android:height="21.0dip" />
            <stroke android:width="1.0dp"
                android:color="?android:attr/colorControlNormal" />
        </shape>
    </item>
</selector>