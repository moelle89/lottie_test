<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LauncherTheme" parent="@*com.android.launcher3:style/BaseLauncherThemeWithCustomAttrs">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffffffff</item>
        <item name="android:textColorHint">#a0ffffff</item>
        <item name="android:textColorTertiary">#ccffffff</item>
        <item name="android:colorControlHighlight">#a0ffffff</item>
        <item name="android:colorPrimary">@*android:color/background_dark</item>
        <item name="*com.android.launcher3:allAppsInterimScrimAlpha">105</item>
        <item name="*com.android.launcher3:allAppsNavBarScrimColor">@*android:color/secondary_text_default_material_light</item>
        <item name="*com.android.launcher3:allAppsScrimColor">@*android:color/secondary_text_default_material_light</item>
        <item name="*com.android.launcher3:isMainColorDark">true</item>
        <item name="*com.android.launcher3:popupColorPrimary">@*android:color/dim_foreground_light</item>
        <item name="*com.android.launcher3:popupColorSecondary">@*android:color/timepicker_default_background_material</item>
        <item name="*com.android.launcher3:popupColorTertiary">@*android:color/button_material_dark</item>
        <item name="*com.android.launcher3:widgetsTheme">@*com.android.launcher3:style/WidgetContainerTheme.Dark</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:navigationBarColor">#00000000</item>
    </style>
    <style name="BaseLauncherTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorEdgeEffect">@*android:color/holo_button_pressed</item>
    </style>
   <style name="BaseLauncherThemeWithCustomAttrs" parent="@*com.android.launcher3:style/BaseLauncherTheme">
        <item name="*com.android.launcher3:allAppsInterimScrimAlpha">105</item>
        <item name="*com.android.launcher3:allAppsNavBarScrimColor">@*android:color/secondary_text_default_material_light</item>
        <item name="*com.android.launcher3:allAppsScrimColor">@*android:color/secondary_text_default_material_light</item>
        <item name="*com.android.launcher3:isMainColorDark">true</item>
        <item name="*com.android.launcher3:isWorkspaceDarkText">false</item>
        <item name="*com.android.launcher3:popupColorPrimary">@*android:color/dim_foreground_light</item>
        <item name="*com.android.launcher3:popupColorSecondary">@*android:color/timepicker_default_background_material</item>
        <item name="*com.android.launcher3:popupColorTertiary">@*android:color/button_material_dark</item>
        <item name="*com.android.launcher3:widgetsTheme">@*com.android.launcher3:style/WidgetContainerTheme.Dark</item>
        <item name="*com.android.launcher3:workspaceAmbientShadowColor">#33000000</item>
        <item name="*com.android.launcher3:workspaceKeyShadowColor">#44000000</item>
        <item name="*com.android.launcher3:workspaceShadowColor">#b0000000</item>
        <item name="*com.android.launcher3:workspaceStatusBarScrim">@*com.android.launcher3:drawable/workspace_bg</item>
        <item name="*com.android.launcher3:workspaceTextColor">@android:color/white</item>
    </style>
</resources>