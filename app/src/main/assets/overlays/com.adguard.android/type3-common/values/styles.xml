<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AdguardMaterialThemeBase" parent="@*com.adguard.android:style/Theme.AppCompat.NoActionBar">
		<item name="android:backgroundTint">@*android:color/background_dark</item>
		<item name="android:statusBarColor">@*android:color/dim_foreground_light</item>
        <item name="android:colorBackground">@*com.adguard.android:color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@*com.adguard.android:color/text_disabled</item>
        <item name="android:textColor">@*com.adguard.android:color/common_text_selector</item>
        <item name="android:textColorHighlight">@*android:color/accent_material_dark</item>
        <item name="android:textColorHint">@*com.adguard.android:color/light_gray_text</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:editTextColor">@*android:color/accent_material_dark</item>
        <item name="*com.adguard.android:chartLineColor">@*android:color/accent_material_dark</item>
        <item name="*com.adguard.android:windowActionModeOverlay">true</item>
        <item name="*com.adguard.android:actionModeBackground">@*android:color/user_icon_default_white</item>
        <item name="*com.adguard.android:colorAccent">@*android:color/accent_material_dark</item>
        <item name="*com.adguard.android:colorControlActivated">@*android:color/accent_material_dark</item>
        <item name="*com.adguard.android:colorButtonNormal">@*com.adguard.android:color/primary</item>
    </style>
    <style name="Base.Widget.AppCompat.Spinner" parent="@*com.adguard.android:style/Platform.Widget.AppCompat.Spinner">
        <item name="android:gravity">start|center</item>
		<item name="android:backgroundTint">@null</item>
        <item name="android:background">@*com.adguard.android:drawable/abc_spinner_mtrl_am_alpha</item>
        <item name="android:clickable">true</item>
        <item name="android:dropDownSelector">?android:listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">@*com.adguard.android:drawable/abc_popup_background_mtrl_mult</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
        <item name="*com.adguard.android:overlapAnchor">true</item>
    </style>
    <style name="AdguardThemeBackgroundNoActionBar" parent="@*com.adguard.android:style/AdguardThemeNoActionBar">
        <item name="android:windowBackground">@*com.adguard.android:drawable/background_splash</item>
		<item name="android:statusBarColor">@*android:color/user_icon_default_white</item>
		<item name="android:backgroundTint">@null</item>
		<item name="android:navigationBarColor">@*android:color/accent_material_dark</item>
    </style>
	<style name="Base.Widget.AppCompat.ListPopupWindow" parent="">
        <item name="android:dropDownSelector">?android:listChoiceBackgroundIndicator</item>
		<item name="android:backgroundTint">@*android:color/dim_foreground_light</item>
        <item name="android:popupBackground">@*com.adguard.android:drawable/abc_popup_background_mtrl_mult</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
    </style>
    <style name="Base.Widget.AppCompat.ListView" parent="@android:style/Widget.ListView">
		<item name="android:backgroundTint">@*android:color/dim_foreground_light</item>
        <item name="android:listSelector">?android:listChoiceBackgroundIndicator</item>
    </style>
    <style name="Base.Widget.AppCompat.ListView.DropDown" parent="@*com.adguard.android:style/Base.Widget.AppCompat.ListView">
        <item name="android:divider">@null</item>
		<item name="android:backgroundTint">@*android:color/dim_foreground_light</item>
    </style>
    <style name="Base.Widget.AppCompat.ListView.Menu" parent="@android:style/Widget.ListView.Menu">
        <item name="android:listSelector">?android:listChoiceBackgroundIndicator</item>
        <item name="android:divider">?android:dividerHorizontal</item>
		<item name="android:backgroundTint">@*android:color/dim_foreground_light</item>
    </style>
</resources>
