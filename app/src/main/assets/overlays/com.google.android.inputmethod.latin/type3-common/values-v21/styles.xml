<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeSelector" parent="@android:style/Theme.Material" />
    <style name="SettingsTheme" parent="@android:style/Theme.DeviceDefault.Settings" >
		<item name="android:homeAsUpIndicator">@*com.google.android.inputmethod.latin:drawable/quantum_ic_arrow_back_white_24</item>
		<item name="android:colorAccent">@*android:color/accent_material_dark</item>
		<item name="android:divider">@*android:color/transparent</item>		
		<item name="android:dividerHorizontal">@*android:color/transparent</item>
		<item name="android:listDivider">@*android:color/transparent</item>
    </style>
    <style name="SettingsTheme.Transparent" parent="@*android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
    </style>
    <!--<style name="platformDialogTheme" parent="@*android:style/Theme.Material.Dialog" />-->
	<style name="BaseTheme" parent="@*android:style/Theme.DeviceDefault.InputMethod" />	
	<style name="MaterialPopupContent" parent="@*com.google.android.inputmethod.latin:style/MaterialPopupView">
        <item name="android:tag">.popup</item>
		<item name="android:backgroundTint">@null</item>
        <item name="android:background">@*com.google.android.inputmethod.latin:drawable/bg_popup_material_dark_theme</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:layout_margin">10.0dip</item>
    </style>
    <style name="MaterialRectangularPopupContent">
        <item name="android:layout_gravity">top</item>
		<item name="android:backgroundTint">@null</item>
        <item name="android:orientation">vertical</item>
        <item name="android:tag">.popup</item>
        <item name="android:background">@*com.google.android.inputmethod.latin:drawable/bg_popup_rectangular_inset_material_dark_theme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10.0dip</item>
    </style>
    <style name="MaterialRectangularPopupHandle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:tag">.popup</item>
        <item name="android:background">@android:color/black</item>
		<item name="android:backgroundTint">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@*com.google.android.inputmethod.latin:dimen/material_popup_bubble_width</item>
    </style>
	
    <style name="platformActivityTheme" parent="@android:style/Theme.DeviceDefault" />
    <style name="platformSettingsTheme" parent="@android:style/Theme.DeviceDefault" >
		<item name="android:homeAsUpIndicator">@*com.google.android.inputmethod.latin:drawable/quantum_ic_arrow_back_white_24</item>
		<item name="android:colorAccent">@*android:color/accent_material_dark</item>
		<item name="android:divider">@*android:color/transparent</item>		
		<item name="android:dividerHorizontal">@*android:color/transparent</item>
		<item name="android:listDivider">@*android:color/transparent</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>		
    </style>	
    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
		<item name="android:buttonBarStyle">?*android:buttonBarStyle</item>
        <item name="android:buttonBarButtonStyle">?*android:buttonBarButtonStyle</item>
        <item name="android:textColorHintInverse">@*android:color/accent_material_dark</item>
        <item name="android:textColorHint">@*android:color/accent_material_dark</item>
        <item name="android:textColorLink">@*com.google.android.inputmethod.latin:color/key_action_pressed_bordered_dark_theme</item>
        <item name="android:textColorLinkInverse">@*com.google.android.inputmethod.latin:color/key_action_pressed_bordered_dark_theme</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
    </style>
	
    <style name="platformDialogTheme" parent="@*android:style/Theme.Material.Dialog" />
</resources>