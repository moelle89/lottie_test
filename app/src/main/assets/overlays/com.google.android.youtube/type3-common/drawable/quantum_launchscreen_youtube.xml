<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque"
    android:paddingMode="stack">
    <item>
        <shape>
            <solid android:color="@*android:color/background_dark" />
        </shape>
    </item>
    <item>
        <nine-patch xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@*com.google.android.youtube:drawable/product_logo_youtube_color_144"
            android:tileMode="disabled"
            android:gravity="center"
            />
    </item>
<item>
<shape android:shape="rectangle">
    <gradient
        android:type="radial"
        android:centerX="0.5"
        android:centerY="0.4"
        android:gradientRadius="120%p"
        android:startColor="#156a84df"
        android:centerColor="#02033bff"
        android:endColor="#00033bff" />
</shape></item>
    <item android:bottom="150dp">
        <bitmap
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@*com.google.android.youtube:drawable/product_logo_youtube_color_192" />
    </item>
</layer-list>