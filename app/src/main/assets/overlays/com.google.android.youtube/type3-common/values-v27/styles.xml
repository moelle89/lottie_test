<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Theme (-> Dark) -->
    <style name="Theme.YouTube.Light" parent="@*com.google.android.youtube:style/Base.V27.Theme.YouTube.Dark" >
        <item name="android:windowShowWallpaper">false</item>
        <item name="*com.google.android.youtube:actionBarSize">56dp</item>
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@*android:color/background_dark</item>
    </style>
    <style name="Base.V27.Theme.YouTube.Light.Dialog" parent="@*com.google.android.youtube:style/Base.V23.Theme.YouTube.Dark.Dialog">
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:navigationBarDividerColor">#00000000</item>
    </style>
    <style name="Base.V27.Theme.YouTube.Dark" parent="@*com.google.android.youtube:style/Base.Theme.YouTube.Dark">
        <item name="android:navigationBarColor">@*android:color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@*android:color/background_dark</item>
    </style>
    <style name="NavigationBar.Dark.V27" parent="@*com.google.android.youtube:style/NavigationBar">
        <item name="*com.google.android.youtube:navigationBarColor">@*android:color/background_dark</item>
        <item name="*com.google.android.youtube:navigationBarControlsMode">light</item>
        <item name="*com.google.android.youtube:navigationBarDividerColor">@*android:color/background_dark</item>
        <item name="*com.google.android.youtube:navigationBarDividerSize">@*com.google.android.youtube:dimen/navigation_bar_divider_size_dark</item>
    </style>
    <style name="NavigationBar.Light.V27" parent="@*com.google.android.youtube:style/NavigationBar">
        <item name="*com.google.android.youtube:navigationBarColor">@*android:color/background_dark</item>
        <item name="*com.google.android.youtube:navigationBarControlsMode">light</item>
        <item name="*com.google.android.youtube:navigationBarDividerColor">@*android:color/background_dark</item>
        <item name="*com.google.android.youtube:navigationBarDividerSize">@*com.google.android.youtube:dimen/navigation_bar_divider_size_light</item>
    </style>
    <!-- Share Dialog -->
    <style name="Theme.YouTube.Share.DialogFragment.Light" parent="@*com.google.android.youtube:style/Base.V27.Theme.YouTube.Share.DialogFragment.Dark" />
</resources>