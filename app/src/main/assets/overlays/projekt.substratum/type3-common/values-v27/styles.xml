<?xml version="1.0" encoding="utf-8"?>
<resources>  
    <style name="AppTheme" parent="@*projekt.substratum:style/Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:windowShowWallpaper">@*android:bool/target_honeycomb_needs_options_menu</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@*projekt.substratum:color/window_bg</item>
        <item name="android:statusBarColor">@*projekt.substratum:color/statusBarColor</item>
		<item name="android:toolbarStyle">@*projekt.substratum:style/ToolbarTheme</item>
        <item name="android:navigationBarColor">@*projekt.substratum:color/navigationBarColor</item>
        <item name="android:windowLightStatusBar">@*projekt.substratum:bool/windowLightStatusBar</item>
		<item name="android:windowLightNavigationBar">@*projekt.substratum:bool/windowLightNavigationBar</item>
		<item name="android:navigationBarDividerColor">@*android:color/transparent</item>
        <item name="*projekt.substratum:colorAccent">@*android:color/accent_material_dark</item>
		<item name="*projekt.substratum:colorControlHighlight">@*projekt.substratum:color/colorRipple</item>
        <item name="*projekt.substratum:colorPrimary">@*projekt.substratum:color/colorPrimary</item>
		<item name="*projekt.substratum:colorPrimaryDark">@*projekt.substratum:color/colorPrimaryDark</item>
        <item name="*projekt.substratum:preferenceTheme">@*projekt.substratum:style/PreferenceThemeOverlay.v14.Material</item>
    </style>
    <style name="AppTheme.InformationActivity" parent="@*projekt.substratum:style/AppTheme">
		<item name="*projekt.substratum:colorPrimary">@*android:color/background_dark</item>
		<item name="android:windowShowWallpaper">@*android:bool/target_honeycomb_needs_options_menu</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
        <item name="*projekt.substratum:windowActionBar">false</item>
        <item name="*projekt.substratum:windowNoTitle">true</item>
    </style>
    <style name="SplashScreen.ActivityTheme" parent="@*projekt.substratum:style/Theme.AppCompat.DayNight">
        <item name="android:windowLightStatusBar">false</item>
		<item name="android:windowShowWallpaper">@*android:bool/target_honeycomb_needs_options_menu</item>
        <item name="android:windowLightNavigationBar">false</item>
		<item name="android:statusBarColor">@*android:color/transparent</item>
		<item name="android:navigationBarColor">@*android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>