<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@*android:color/background_dark" />
        </shape>
    </item>
    <item>
        <shape android:tint="#17B3D1E3" >
            <gradient
                android:endColor="#B1000000"
                android:startColor="#53000000"
                android:angle="90" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:tint="@*android:color/facelock_spotlight_mask">
            <gradient android:endColor="@*android:color/facelock_spotlight_mask" android:startColor="#A4000000" android:angle="90.0" android:type="linear" />
        </shape>
    </item>
	<item>
        <shape android:shape="rectangle" android:tint="@*android:color/holo_orange_light">
            <gradient
                android:type="linear"
                android:startColor="@android:color/transparent"
                android:endColor="#64000000"
                android:angle="315"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:endColor="@*android:color/background_dark" android:startColor="#00A6CDE4" android:angle="90.0" />
        </shape>
    </item>
    <item android:gravity="bottom" android:height="1.0dip">
        <shape android:shape="rectangle" android:tint="@*android:color/holo_orange_light">
            <gradient android:endColor="#59000000"  android:startColor="#15000000" android:angle="45.0" />
        </shape>
    </item>
</layer-list>