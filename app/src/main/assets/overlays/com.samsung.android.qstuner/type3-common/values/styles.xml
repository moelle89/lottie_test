<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="systemui_theme_light" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:statusBarColor">@*android:color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="*com.samsung.android.qstuner:colorControlActivated">@*com.samsung.android.qstuner:color/qsc_color_primary</item>
    </style>
    <style name="Theme.SlimIndicatorActivity" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:statusBarColor">@*android:color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
	
 <style name="QSColoringItemSummary">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@*android:color/secondary_text_default_material_dark</item>
        <item name="android:fontFamily">sec-roboto-condensed</item>
    </style>
    <style name="QSColoringListSummary">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@*android:color/secondary_text_default_material_dark</item>
        <item name="android:fontFamily">sec-roboto-regular</item>
    </style>
    <style name="QSColoringListTitle">
        <item name="android:textSize">15.0dip</item>
		<item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">sec-roboto-regular</item>
    </style>
    <style name="QSColoringNotificationHeaderClock">
        <item name="android:textSize">11.0dip</item>
        <item name="android:textColor">@*android:color/lighter_gray</item>
        <item name="android:fontFamily">sec-roboto-condensed</item>
    </style>
    <style name="QSColoringNotificationShelfButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@*android:color/lighter_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sec-roboto-condensed</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="QSColoringNotificationTitle">
        <item name="android:textSize">11.0dip</item>
        <item name="android:textColor">@*android:color/secondary_text_default_material_dark</item>
        <item name="android:fontFamily">sec-roboto-regular</item>
    </style>
    <style name="QSColoringSwitch" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16.0dip</item>
        <item name="android:colorControlActivated">@*android:color/accent_material_dark</item>
    </style>
    <style name="QSColoringTileLabel">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">sec-roboto-condensed</item>
    </style>
</resources>
