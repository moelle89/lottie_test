<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Wellbeing.Toolbar" parent="@*com.google.android.apps.wellbeing:style/Widget.AppCompat.Toolbar">
        <item name="android:background">@*android:color/background_dark</item>
		<item name="android:backgroundTint">@null</item>
    </style>
    <style name="MenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@*android:color/lighter_gray</item>
    </style>
    <style name="Theme.GoogleMaterial.Light" parent="@*com.google.android.apps.wellbeing:style/Base.Theme.GoogleMaterial.Light" >
		<item name="android:colorBackground">@*android:color/transparent</item>
        <item name="android:windowBackground">@*android:color/transparent</item>
		<item name="android:timePickerStyle">@*android:style/Widget.Material.TimePicker</item>        
		<item name="android:datePickerStyle">@*android:style/Widget.Material.DatePicker</item>
        <item name="android:timePickerDialogTheme">@*android:style/ThemeOverlay.Material.Dialog.TimePicker</item>
		<item name="android:datePickerDialogTheme">@*android:style/ThemeOverlay.Material.Dialog.DatePicker</item>
        <item name="android:navigationBarColor">@*android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorControlNormal">@*android:color/lighter_gray</item>
    </style>
    <style name="Base.Theme.GoogleMaterial.Light" parent="@*com.google.android.apps.wellbeing:style/Base.V14.Theme.GoogleMaterial.Light" >
        <item name="*com.google.android.apps.wellbeing:colorOnBackground">@*com.google.android.apps.wellbeing:color/google_default_color_on_background</item>
		<item name="android:colorBackground">@*android:color/transparent</item>
        <item name="android:windowBackground">@*android:color/transparent</item>
    </style>
    <style name="CardView" parent="@*com.google.android.apps.wellbeing:style/Base.CardView">
        <item name="*com.google.android.apps.wellbeing:cardBackgroundColor">@*android:color/user_icon_default_white</item>
    </style>
	
    <style name="Theme.GoogleMaterial.Light.Bridge" parent="@*com.google.android.apps.wellbeing:style/Base.Theme.GoogleMaterial.Dark.Bridge" />
    <style name="Theme.GoogleMaterial.Light.Dialog" parent="@*com.google.android.apps.wellbeing:style/Base.Theme.GoogleMaterial.Dark.Dialog" />
    <style name="Theme.GoogleMaterial.Light.Dialog.Alert" parent="@*com.google.android.apps.wellbeing:style/Base.Theme.GoogleMaterial.Dark.Dialog.Alert" />
    <style name="Theme.GoogleMaterial.Light.Dialog.MinWidth" parent="@*com.google.android.apps.wellbeing:style/Base.Theme.GoogleMaterial.Dark.Dialog.MinWidth" />
    <style name="Theme.GoogleMaterial.Light.DialogWhenLarge" parent="@*com.google.android.apps.wellbeing:style/Base.Theme.GoogleMaterial.Dark.DialogWhenLarge" />
    <style name="Theme.GoogleMaterial.Light.NoActionBar" parent="@*com.google.android.apps.wellbeing:style/Theme.GoogleMaterial.Light">
        <item name="*com.google.android.apps.wellbeing:windowActionBar">false</item>
        <item name="*com.google.android.apps.wellbeing:windowNoTitle">true</item>
    </style>
</resources>