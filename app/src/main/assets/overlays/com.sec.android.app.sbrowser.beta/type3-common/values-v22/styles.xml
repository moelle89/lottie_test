<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="SettingsThemeBase" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:windowNoTitle">false</item>
        <item name="android:spinnerItemStyle">@*com.sec.android.app.sbrowser.beta:style/SettingsSpinnerItem</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@*com.sec.android.app.sbrowser.beta:style/SBrowserActionBarStyle</item>
        <item name="android:actionButtonStyle">@*com.sec.android.app.sbrowser.beta:style/SBrowserActionButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@*com.sec.android.app.sbrowser.beta:style/SettingsOverflowButton</item>
        <item name="android:actionModeCloseButtonStyle">@*com.sec.android.app.sbrowser.beta:style/CabModeActionButton</item>
        <item name="android:alertDialogTheme">@*com.sec.android.app.sbrowser.beta:style/SettingsThemeForDialog</item>
        <item name="android:actionMenuTextColor">@*android:color/accent_material_dark</item>
        <item name="android:actionModeStyle">@*com.sec.android.app.sbrowser.beta:style/SBrowserActionModeStyle</item>
        <item name="android:colorControlActivated">@*android:color/accent_material_dark</item>        
		<item name="android:colorAccent">@*android:color/accent_material_dark</item>
		<item name="android:navigationBarColor">@*android:color/background_dark</item>		
		<item name="android:windowBackground">@*android:color/background_dark</item>		
		<item name="android:colorBackground">@*android:color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
	<style name="SBrowserActionBarStyle" parent="@*android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@*com.sec.android.app.sbrowser.beta:color/toolbar_bg_color</item>
        <item name="android:height">56.0dp</item>
        <item name="android:titleTextStyle">@*com.sec.android.app.sbrowser.beta:style/SBrowserTitleTextStyle</item>
    </style>
	<style name="MainBaseTheme" parent="@*com.sec.android.app.sbrowser.beta:style/AppTheme">
        <item name="android:windowNoTitle">true</item>        
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
